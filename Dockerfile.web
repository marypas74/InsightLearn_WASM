# Dockerfile for InsightLearn Blazor WebAssembly Frontend
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 80

# Add non-root user
RUN groupadd -r appuser && useradd -r -g appuser -u 1001 appuser

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG VERSION=1.0.0
ARG GIT_COMMIT=unknown
ARG BUILD_NUMBER=0
ARG BUILD_DATE=unknown

WORKDIR /src

# Copy solution and project files
COPY ["InsightLearn.WASM.sln", "./"]
COPY ["Directory.Build.props", "./"]
COPY ["src/InsightLearn.WebAssembly/InsightLearn.WebAssembly.csproj", "src/InsightLearn.WebAssembly/"]
COPY ["src/InsightLearn.Core/InsightLearn.Core.csproj", "src/InsightLearn.Core/"]

# Restore dependencies
RUN dotnet restore "src/InsightLearn.WebAssembly/InsightLearn.WebAssembly.csproj"

# Copy all source code
COPY . .

# Build and publish the WASM application
WORKDIR "/src/src/InsightLearn.WebAssembly"
RUN dotnet publish "InsightLearn.WebAssembly.csproj" \
    -c Release \
    -o /app/publish \
    /p:UseAppHost=false \
    /p:Version=${VERSION} \
    /p:SourceRevisionId=${GIT_COMMIT} \
    /p:BuildNumber=${BUILD_NUMBER}

FROM base AS final
WORKDIR /app

# Install nginx for serving static files
RUN apt-get update && \
    apt-get install -y nginx && \
    rm -rf /var/lib/apt/lists/*

# Copy WASM files to nginx
COPY --from=build /app/publish/wwwroot /usr/share/nginx/html

# Copy custom nginx configuration
COPY k8s/nginx-wasm.conf /etc/nginx/conf.d/default.conf

# Create log directory
RUN mkdir -p /app/logs && \
    chown -R appuser:appuser /app && \
    chown -R appuser:appuser /usr/share/nginx/html && \
    chown -R appuser:appuser /var/log/nginx && \
    chown -R appuser:appuser /var/lib/nginx && \
    chmod -R 755 /usr/share/nginx/html

# Switch to non-root user for nginx (run as appuser)
USER root

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=20s --retries=3 \
  CMD curl -f http://localhost/health || exit 1

CMD ["nginx", "-g", "daemon off;"]
