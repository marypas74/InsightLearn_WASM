{
  "dashboard": {
    "title": "InsightLearn Password Rotation Monitoring",
    "uid": "insightlearn-password-rotation",
    "tags": ["insightlearn", "security", "password-rotation"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Password Rotation Countdown",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 8, "h": 6},
        "targets": [{
          "expr": "insightlearn_password_rotation_countdown_seconds",
          "refId": "A"
        }],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 43200, "color": "yellow"},
                {"value": 86400, "color": "green"}
              ]
            },
            "mappings": [],
            "color": {"mode": "thresholds"}
          }
        }
      },
      {
        "id": 2,
        "title": "Rotation Status",
        "type": "stat",
        "gridPos": {"x": 8, "y": 0, "w": 8, "h": 6},
        "targets": [{
          "expr": "insightlearn_password_rotation_status",
          "refId": "A"
        }],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "orientation": "auto",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": -1, "color": "blue"},
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            },
            "mappings": [
              {"type": "value", "value": "-1", "text": "Never Run"},
              {"type": "value", "value": "0", "text": "FAILED"},
              {"type": "value", "value": "1", "text": "SUCCESS"}
            ],
            "color": {"mode": "thresholds"}
          }
        }
      },
      {
        "id": 3,
        "title": "Next Rotation Time",
        "type": "stat",
        "gridPos": {"x": 16, "y": 0, "w": 8, "h": 6},
        "targets": [{
          "expr": "insightlearn_password_rotation_next_scheduled_timestamp * 1000",
          "refId": "A"
        }],
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "orientation": "auto",
          "textMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "dateTimeAsIso",
            "color": {"mode": "fixed", "fixedColor": "blue"}
          }
        }
      },
      {
        "id": 4,
        "title": "Password Ages (Days Since Last Rotation)",
        "type": "bargauge",
        "gridPos": {"x": 0, "y": 6, "w": 12, "h": 8},
        "targets": [{
          "expr": "insightlearn_password_age_seconds / 86400",
          "legendFormat": "{{secret}}",
          "refId": "A"
        }],
        "options": {
          "displayMode": "gradient",
          "orientation": "horizontal",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "d",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 30, "color": "yellow"},
                {"value": 60, "color": "orange"},
                {"value": 90, "color": "red"}
              ]
            },
            "max": 90,
            "color": {"mode": "thresholds"}
          }
        }
      },
      {
        "id": 5,
        "title": "Current Password Hashes (SHA256 - Tracking Only)",
        "type": "table",
        "gridPos": {"x": 12, "y": 6, "w": 12, "h": 8},
        "targets": [{
          "expr": "insightlearn_password_hash_info",
          "format": "table",
          "instant": true,
          "refId": "A"
        }],
        "options": {
          "showHeader": true
        },
        "fieldConfig": {
          "defaults": {},
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "hash"},
              "properties": [
                {"id": "custom.width", "value": 500},
                {"id": "custom.displayMode", "value": "color-text"}
              ]
            }
          ]
        },
        "transformations": [{
          "id": "organize",
          "options": {
            "excludeByName": {"Value": true, "Time": true, "__name__": true},
            "indexByName": {"secret": 0, "hash": 1}
          }
        }]
      },
      {
        "id": 6,
        "title": "Rotation Success Rate (%)",
        "type": "gauge",
        "gridPos": {"x": 0, "y": 14, "w": 8, "h": 6},
        "targets": [{
          "expr": "100 * (insightlearn_password_rotation_total_count - insightlearn_password_rotation_failure_count) / insightlearn_password_rotation_total_count",
          "refId": "A"
        }],
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 70, "color": "yellow"},
                {"value": 95, "color": "green"}
              ]
            },
            "color": {"mode": "thresholds"}
          }
        }
      },
      {
        "id": 7,
        "title": "Total Rotations",
        "type": "stat",
        "gridPos": {"x": 8, "y": 14, "w": 4, "h": 6},
        "targets": [{
          "expr": "insightlearn_password_rotation_total_count",
          "refId": "A"
        }],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "fixed", "fixedColor": "blue"}
          }
        }
      },
      {
        "id": 8,
        "title": "Failed Rotations",
        "type": "stat",
        "gridPos": {"x": 12, "y": 14, "w": 4, "h": 6},
        "targets": [{
          "expr": "insightlearn_password_rotation_failure_count",
          "refId": "A"
        }],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "fixed", "fixedColor": "red"}
          }
        }
      },
      {
        "id": 9,
        "title": "Last Successful Rotation",
        "type": "stat",
        "gridPos": {"x": 16, "y": 14, "w": 8, "h": 6},
        "targets": [{
          "expr": "insightlearn_password_rotation_last_success_timestamp * 1000",
          "refId": "A"
        }],
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "textMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "dateTimeAsIso",
            "color": {"mode": "fixed", "fixedColor": "green"}
          }
        }
      },
      {
        "id": 10,
        "title": "Rotation History (Last 7 Days)",
        "type": "timeseries",
        "gridPos": {"x": 0, "y": 20, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "insightlearn_password_rotation_status",
            "legendFormat": "Status (1=Success, 0=Failed, -1=Running)",
            "refId": "A"
          },
          {
            "expr": "insightlearn_password_rotation_countdown_seconds / 3600",
            "legendFormat": "Countdown (Hours)",
            "refId": "B"
          }
        ],
        "options": {
          "legend": {"displayMode": "list", "placement": "bottom"}
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10,
              "pointSize": 5
            }
          }
        }
      }
    ]
  }
}
