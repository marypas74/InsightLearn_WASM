@using InsightLearn.WebAssembly.Services.Auth
@using Microsoft.AspNetCore.Components.Authorization
@inject SessionTimeoutService SessionTimeout
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider
@implements IDisposable

@if (IsVisible)
{
    <div class="session-timeout-overlay">
        <div class="session-timeout-modal">
            <div class="timeout-icon">
                <i class="fas fa-clock"></i>
            </div>
            <h3>Session Expiring Soon</h3>
            <p>Your session will expire due to inactivity.</p>
            <div class="countdown">
                <span class="countdown-number">@RemainingTime</span>
            </div>
            <div class="timeout-actions">
                <button class="btn btn-primary btn-extend" @onclick="ExtendSession">
                    <i class="fas fa-redo"></i> Stay Logged In
                </button>
                <button class="btn btn-outline-secondary btn-logout" @onclick="Logout">
                    <i class="fas fa-sign-out-alt"></i> Logout Now
                </button>
            </div>
        </div>
    </div>
}

<style>
    .session-timeout-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.7);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 10000;
        animation: fadeIn 0.3s ease;
    }

    .session-timeout-modal {
        background: white;
        border-radius: 16px;
        padding: 2.5rem;
        text-align: center;
        max-width: 400px;
        width: 90%;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        animation: slideIn 0.3s ease;
    }

    .timeout-icon {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: linear-gradient(135deg, #f59e0b, #d97706);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
    }

    .timeout-icon i {
        font-size: 2.5rem;
        color: white;
    }

    .session-timeout-modal h3 {
        color: #1f2937;
        margin-bottom: 0.75rem;
        font-size: 1.5rem;
        font-weight: 600;
    }

    .session-timeout-modal p {
        color: #6b7280;
        margin-bottom: 1.5rem;
    }

    .countdown {
        margin-bottom: 2rem;
    }

    .countdown-number {
        font-size: 3rem;
        font-weight: 700;
        color: #dc2626;
        font-family: 'SF Mono', 'Roboto Mono', monospace;
    }

    .timeout-actions {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .btn-extend {
        background: linear-gradient(135deg, #0073b1, #005582);
        border: none;
        padding: 0.875rem 1.5rem;
        font-weight: 600;
        border-radius: 8px;
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .btn-extend:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0, 115, 177, 0.35);
    }

    .btn-logout {
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
    }

    @@keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: scale(0.9) translateY(-20px);
        }
        to {
            opacity: 1;
            transform: scale(1) translateY(0);
        }
    }
</style>

@code {
    private bool IsVisible { get; set; }
    private string RemainingTime { get; set; } = "5:00";

    protected override async Task OnInitializedAsync()
    {
        // Only initialize for authenticated users
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        if (authState.User.Identity?.IsAuthenticated == true)
        {
            SessionTimeout.OnWarningShown += ShowWarning;
            SessionTimeout.OnCountdownTick += UpdateCountdown;
            SessionTimeout.OnSessionExpired += HandleSessionExpired;

            await SessionTimeout.InitializeAsync();
        }
    }

    private void ShowWarning()
    {
        IsVisible = true;
        InvokeAsync(StateHasChanged);
    }

    private void UpdateCountdown(int remainingSeconds)
    {
        var minutes = remainingSeconds / 60;
        var seconds = remainingSeconds % 60;
        RemainingTime = $"{minutes}:{seconds:D2}";
        InvokeAsync(StateHasChanged);
    }

    private void HandleSessionExpired()
    {
        IsVisible = false;
        Navigation.NavigateTo("/login?expired=true", forceLoad: true);
    }

    private void ExtendSession()
    {
        SessionTimeout.ExtendSession();
        IsVisible = false;
        StateHasChanged();
    }

    private void Logout()
    {
        IsVisible = false;
        SessionTimeout.Stop();
        Navigation.NavigateTo("/logout", forceLoad: true);
    }

    public void Dispose()
    {
        SessionTimeout.OnWarningShown -= ShowWarning;
        SessionTimeout.OnCountdownTick -= UpdateCountdown;
        SessionTimeout.OnSessionExpired -= HandleSessionExpired;
    }
}
