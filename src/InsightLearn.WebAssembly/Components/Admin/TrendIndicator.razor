@using InsightLearn.Core.DTOs.Admin

@if (Trend != null)
{
    <div class="trend-indicator @(Trend.IsIncrease ? "trend-up" : Trend.Change < 0 ? "trend-down" : "trend-neutral")">
        <span class="trend-arrow">
            @if (Trend.IsIncrease)
            {
                <i class="fas fa-arrow-up"></i>
            }
            else if (Trend.Change < 0)
            {
                <i class="fas fa-arrow-down"></i>
            }
            else
            {
                <i class="fas fa-minus"></i>
            }
        </span>
        <span class="trend-value">
            @Math.Abs(Trend.ChangePercentage).ToString("0.#")%
        </span>
        <span class="trend-period">vs @Trend.Period</span>
    </div>
}

@code {
    [Parameter] public TrendData? Trend { get; set; }
}

<style>
    .trend-indicator {
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
        font-size: 0.875rem;
        font-weight: 500;
        padding: 0.125rem 0.5rem;
        border-radius: 6px;
    }

    .trend-up {
        color: #22c55e;
        background-color: rgba(34, 197, 94, 0.1);
    }

    .trend-down {
        color: #ef4444;
        background-color: rgba(239, 68, 68, 0.1);
    }

    .trend-neutral {
        color: #64748b;
        background-color: rgba(100, 116, 139, 0.1);
    }

    .trend-arrow {
        font-size: 0.75rem;
    }

    .trend-value {
        font-weight: 600;
    }

    .trend-period {
        opacity: 0.8;
        margin-left: 0.125rem;
    }
}</style>