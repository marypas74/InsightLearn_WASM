@if (IsVisible)
{
    <div class="modal-overlay" @onclick="HandleOverlayClick">
        <div class="modal-dialog" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h3 class="modal-title">@Title</h3>
                <button class="close-button" @onclick="HandleCancel">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body">
                <div class="confirm-icon @GetIconClass()">
                    <i class="fas fa-@GetIconName()"></i>
                </div>
                <p class="confirm-message">@Message</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="HandleCancel">
                    <i class="fas fa-times"></i> @CancelText
                </button>
                <button class="btn @GetConfirmButtonClass()" @onclick="HandleConfirm">
                    <i class="fas fa-@GetConfirmIconName()"></i> @ConfirmText
                </button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public string Title { get; set; } = "Confirm Action";
    [Parameter] public string Message { get; set; } = "Are you sure you want to continue?";
    [Parameter] public string ConfirmText { get; set; } = "Confirm";
    [Parameter] public string CancelText { get; set; } = "Cancel";
    [Parameter] public string Type { get; set; } = "warning"; // warning, danger, info, success
    [Parameter] public EventCallback OnConfirm { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    private async Task HandleConfirm()
    {
        await OnConfirm.InvokeAsync();
    }

    private async Task HandleCancel()
    {
        await OnCancel.InvokeAsync();
    }

    private async Task HandleOverlayClick()
    {
        await HandleCancel();
    }

    private string GetIconClass() => Type switch
    {
        "danger" => "icon-danger",
        "warning" => "icon-warning",
        "success" => "icon-success",
        "info" => "icon-info",
        _ => "icon-warning"
    };

    private string GetIconName() => Type switch
    {
        "danger" => "exclamation-triangle",
        "warning" => "exclamation-circle",
        "success" => "check-circle",
        "info" => "info-circle",
        _ => "question-circle"
    };

    private string GetConfirmButtonClass() => Type switch
    {
        "danger" => "btn-danger",
        "warning" => "btn-warning",
        "success" => "btn-success",
        "info" => "btn-primary",
        _ => "btn-primary"
    };

    private string GetConfirmIconName() => Type switch
    {
        "danger" => "trash",
        "warning" => "check",
        "success" => "check",
        "info" => "check",
        _ => "check"
    };
}
