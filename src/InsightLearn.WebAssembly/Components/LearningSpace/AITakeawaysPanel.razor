@namespace InsightLearn.WebAssembly.Components.LearningSpace

<div class="ai-takeaways-panel">
    <!-- Header -->
    <div class="takeaways-header">
        <h3 class="takeaways-title">
            <span class="icon">ü§ñ</span>
            AI Key Takeaways
        </h3>

        @if (hasTakeaways && takeaways?.Metadata != null)
        {
            <div class="takeaways-meta">
                <span class="meta-item" title="Total Takeaways">
                    <span class="icon">üìù</span>
                    @takeaways.Metadata.TotalTakeaways takeaways
                </span>
                <span class="meta-item" title="AI Model">
                    <span class="icon">üß†</span>
                    @takeaways.Metadata.ProcessingModel
                </span>
            </div>
        }
    </div>

    <!-- Category Filter -->
    @if (hasTakeaways)
    {
        <div class="category-filter">
            @foreach (var category in categories)
            {
                var count = category == "All"
                    ? takeaways?.Takeaways?.Count ?? 0
                    : categoryCounts.GetValueOrDefault(category, 0);

                <button
                    class="category-btn @(selectedCategory == category ? "active" : "")"
                    style="@(category != "All" ? $"border-color: {GetCategoryColor(category)}" : "")"
                    @onclick="@(() => FilterByCategory(category))"
                    disabled="@(count == 0 && category != "All")">
                    @if (category != "All")
                    {
                        <span class="icon">@GetCategoryIcon(category)</span>
                    }
                    @category
                    <span class="count">(@count)</span>
                </button>
            }
        </div>
    }

    <!-- Loading State -->
    @if (isLoading)
    {
        <div class="takeaways-loading">
            <div class="spinner"></div>
            <span>Loading AI takeaways...</span>
        </div>

        <!-- Loading Skeleton -->
        <div class="takeaways-list" style="padding: 16px;">
            @for (int i = 0; i < 3; i++)
            {
                <div class="skeleton-takeaway-card">
                    <div class="skeleton-header">
                        <div class="skeleton-badge skeleton-loader"></div>
                        <div class="skeleton-relevance skeleton-loader"></div>
                    </div>
                    <div class="skeleton-text skeleton-loader"></div>
                    <div class="skeleton-text skeleton-loader"></div>
                    <div class="skeleton-timestamp skeleton-loader"></div>
                </div>
            }
        </div>
    }

    <!-- Login Required State -->
    @if (!isLoading && !isAuthenticated)
    {
        <div class="login-required-overlay">
            <span class="icon">üîí</span>
            <div class="login-required-content">
                <h3 class="login-required-title">Login Required</h3>
                <p class="login-required-message">
                    Sign in to unlock AI-powered insights and personalized learning features.
                </p>
                <ul class="login-required-benefits">
                    <li>AI-generated key takeaways</li>
                    <li>Personalized learning recommendations</li>
                    <li>Save notes and track progress</li>
                    <li>Interactive AI assistant</li>
                </ul>
                <button class="btn-login-primary" @onclick="NavigateToLogin">
                    <i class="fas fa-sign-in-alt"></i> Sign In to Continue
                </button>
            </div>
        </div>
    }

    <!-- Error State -->
    @if (!isLoading && isAuthenticated && errorMessage != null)
    {
        <!-- Processing State -->
        @if (processingStatus == "Processing" || processingStatus == "Queued")
        {
            <div class="takeaways-error">
                <span class="icon">‚è≥</span>
                <div class="error-content">
                    <p class="error-title">AI Analysis in Progress</p>
                    <div class="processing-status">
                        <div class="progress-bar">
                            <div class="progress-bar-fill processing"></div>
                        </div>
                        <small>Our AI is analyzing the video transcript. This usually takes 2-3 minutes.</small>
                    </div>
                </div>
            </div>
            <div class="help-text">
                <span class="icon">üí°</span>
                <span>You can continue watching the video. The takeaways will appear automatically when ready.</span>
            </div>
        }
        <!-- Not Generated Yet State -->
        else if (processingStatus == "NotStarted")
        {
            <div class="generate-content-state">
                <span class="icon empty-state-illustration">ü§ñ</span>
                <h3 class="generate-content-title">No AI Takeaways Yet</h3>
                <p class="generate-content-message">
                    AI analysis hasn't been generated for this lesson. Contact your instructor to enable AI insights.
                </p>
                <button class="btn-request-generation" @onclick="RequestGenerationAsync">
                    <i class="fas fa-magic"></i> Request AI Analysis
                </button>
            </div>
            <div class="help-text">
                <span class="icon">‚ÑπÔ∏è</span>
                <span>AI takeaways are automatically generated for most lessons. If you don't see them, the instructor may need to enable this feature.</span>
            </div>
        }
        <!-- Failed State -->
        else if (processingStatus == "Failed")
        {
            <div class="takeaways-error" style="background: #ffebee; border-color: #f44336;">
                <span class="icon">‚ö†Ô∏è</span>
                <div class="error-content">
                    <p class="error-title" style="color: #c62828;">AI Analysis Failed</p>
                    <p style="font-size: 13px; color: #666; margin: 8px 0;">
                        The AI analysis encountered an error. This might be due to:
                    </p>
                    <ul style="text-align: left; font-size: 13px; color: #666; margin: 12px 0; padding-left: 20px;">
                        <li>Missing video transcript</li>
                        <li>Video content format issues</li>
                        <li>Temporary service unavailability</li>
                    </ul>
                    <button class="btn-request-generation" @onclick="RequestGenerationAsync">
                        <i class="fas fa-redo"></i> Retry Analysis
                    </button>
                </div>
            </div>
        }
        <!-- Generic Error -->
        else
        {
            <div class="takeaways-error">
                <span class="icon">ü§ñ</span>
                <div class="error-content">
                    <p class="error-title">@errorMessage</p>
                    <button class="btn-request-generation" @onclick="LoadTakeawaysAsync">
                        <i class="fas fa-sync"></i> Refresh
                    </button>
                </div>
            </div>
        }
    }

    <!-- Takeaways List -->
    @if (hasTakeaways && !isLoading)
    {
        <div class="takeaways-list">
            @if (filteredTakeaways.Count == 0)
            {
                <div class="empty-state">
                    <span class="icon">üîç</span>
                    <p>No takeaways in this category</p>
                    <button class="btn-link" @onclick="@(() => FilterByCategory("All"))">Show all</button>
                </div>
            }
            else
            {
                @foreach (var takeaway in filteredTakeaways.OrderByDescending(t => t.RelevanceScore))
                {
                    <div class="takeaway-card @GetRelevanceClass(takeaway.RelevanceScore)"
                         style="border-left-color: @GetCategoryColor(takeaway.Category)">

                        <div class="takeaway-header">
                            <span class="category-badge"
                                  style="background: @GetCategoryColor(takeaway.Category)">
                                <span class="icon">@GetCategoryIcon(takeaway.Category)</span>
                                @takeaway.Category
                            </span>

                            <span class="relevance-badge @GetRelevanceClass(takeaway.RelevanceScore)"
                                  title="AI Relevance Score: @((takeaway.RelevanceScore * 100).ToString("F0"))%">
                                @GetRelevanceLabel(takeaway.RelevanceScore)
                            </span>
                        </div>

                        <div class="takeaway-text" @onclick="@(() => OnTakeawayClickAsync(takeaway))">
                            @takeaway.Text
                        </div>

                        @if (takeaway.TimestampStart.HasValue)
                        {
                            <button class="takeaway-timestamp"
                                    @onclick="@(() => OnTakeawayClickAsync(takeaway))"
                                    title="Jump to this moment in video">
                                <span class="icon">‚ñ∂Ô∏è</span>
                                @FormatTimestamp(takeaway.TimestampStart.Value)
                                @if (takeaway.TimestampEnd.HasValue)
                                {
                                    <span> - @FormatTimestamp(takeaway.TimestampEnd.Value)</span>
                                }
                            </button>
                        }

                        <div class="takeaway-feedback">
                            <span class="feedback-label">Was this helpful?</span>
                            <div class="feedback-buttons">
                                <button class="btn-feedback @(takeaway.UserFeedback == 1 ? "active" : "")"
                                        @onclick="@(() => SubmitFeedbackAsync(takeaway.TakeawayId, takeaway.UserFeedback == 1 ? 0 : 1))"
                                        title="Helpful">
                                    üëç
                                </button>
                                <button class="btn-feedback @(takeaway.UserFeedback == -1 ? "active" : "")"
                                        @onclick="@(() => SubmitFeedbackAsync(takeaway.TakeawayId, takeaway.UserFeedback == -1 ? 0 : -1))"
                                        title="Not helpful">
                                    üëé
                                </button>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    }

    <!-- Footer Info -->
    @if (hasTakeaways && takeaways?.Metadata?.ProcessedAt != null)
    {
        <div class="takeaways-footer">
            <small class="footer-info">
                AI-generated on @takeaways.Metadata.ProcessedAt.Value.ToString("MMM d, yyyy")
            </small>
        </div>
    }
</div>
