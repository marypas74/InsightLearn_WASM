@*
    LessonInfo Component - LinkedIn Learning Style
    InsightLearn WASM v2.1.0

    Features:
    - Instructor avatar with bio
    - Lesson title and metadata
    - Action buttons (Like, Save, Share)
    - Auto-generated subtitle badge
    - Course progress indicator
*@

<div class="ll-lesson-info-section">
    <div class="ll-lesson-header">
        @* Instructor Avatar *@
        <div class="ll-instructor-section">
            @if (!string.IsNullOrEmpty(InstructorAvatarUrl))
            {
                <img src="@InstructorAvatarUrl"
                     alt="@InstructorName"
                     class="ll-instructor-avatar"
                     loading="lazy" />
            }
            else
            {
                <div class="ll-instructor-avatar ll-avatar-placeholder">
                    <i class="fas fa-user"></i>
                </div>
            }
        </div>

        @* Lesson Meta Info *@
        <div class="ll-lesson-meta">
            <h1 class="ll-lesson-title-main">@LessonTitle</h1>
            <div class="ll-lesson-subtitle">
                <span class="ll-lesson-subtitle-item">
                    <a href="/instructor/@InstructorId" class="ll-instructor-link">@InstructorName</a>
                </span>
                <span class="ll-divider">•</span>
                <span class="ll-lesson-subtitle-item">
                    <i class="fas fa-clock"></i>
                    @FormatDuration(DurationMinutes)
                </span>
                @if (HasSubtitles)
                {
                    <span class="ll-divider">•</span>
                    <span class="ll-lesson-subtitle-item ll-subtitle-badge" title="@(IsAutoGeneratedSubtitle ? "Auto-generated subtitles available" : "Subtitles available")">
                        <i class="fas fa-closed-captioning"></i>
                        CC
                        @if (IsAutoGeneratedSubtitle)
                        {
                            <span class="ll-auto-badge">AI</span>
                        }
                    </span>
                }
                @if (TotalLessons > 0)
                {
                    <span class="ll-divider">•</span>
                    <span class="ll-lesson-subtitle-item">
                        Lesson @CurrentLessonIndex of @TotalLessons
                    </span>
                }
            </div>

            @* Course Progress Bar *@
            @if (CourseProgressPercent > 0)
            {
                <div class="ll-course-progress">
                    <div class="ll-course-progress-bar">
                        <div class="ll-course-progress-fill" style="width: @(CourseProgressPercent)%"></div>
                    </div>
                    <span class="ll-course-progress-text">@CourseProgressPercent% complete</span>
                </div>
            }
        </div>

        @* Action Buttons *@
        <div class="ll-lesson-actions">
            <button class="ll-action-btn @(IsLiked ? "active" : "")"
                    @onclick="HandleLikeClick"
                    title="@(IsLiked ? "Unlike" : "Like")">
                <i class="@(IsLiked ? "fas" : "far") fa-heart"></i>
                @if (LikesCount > 0)
                {
                    <span class="ll-action-count">@FormatCount(LikesCount)</span>
                }
            </button>

            <button class="ll-action-btn @(IsSaved ? "active" : "")"
                    @onclick="HandleSaveClick"
                    title="@(IsSaved ? "Remove from saved" : "Save for later")">
                <i class="@(IsSaved ? "fas" : "far") fa-bookmark"></i>
            </button>

            <button class="ll-action-btn"
                    @onclick="HandleShareClick"
                    title="Share">
                <i class="fas fa-share-alt"></i>
            </button>

            <div class="ll-action-dropdown">
                <button class="ll-action-btn"
                        @onclick="ToggleMoreMenu"
                        title="More options">
                    <i class="fas fa-ellipsis-h"></i>
                </button>
                @if (showMoreMenu)
                {
                    <div class="ll-dropdown-menu">
                        <button class="ll-dropdown-item" @onclick="HandleReportClick">
                            <i class="fas fa-flag"></i>
                            Report issue
                        </button>
                        <button class="ll-dropdown-item" @onclick="HandleDownloadClick">
                            <i class="fas fa-download"></i>
                            Download resources
                        </button>
                        @if (HasTranscript)
                        {
                            <button class="ll-dropdown-item" @onclick="HandleTranscriptDownload">
                                <i class="fas fa-file-alt"></i>
                                Download transcript
                            </button>
                        }
                    </div>
                }
            </div>
        </div>
    </div>

    @* Course Info Banner *@
    @if (!string.IsNullOrEmpty(CourseName))
    {
        <div class="ll-course-banner">
            <div class="ll-course-banner-info">
                <span class="ll-course-label">From course:</span>
                <a href="/courses/@CourseId" class="ll-course-link">@CourseName</a>
            </div>
            @if (!string.IsNullOrEmpty(CategoryName))
            {
                <span class="ll-category-badge">@CategoryName</span>
            }
        </div>
    }
</div>

<style>
    /* LinkedIn Learning Lesson Info Styles */
    .ll-lesson-info-section {
        padding: var(--ll-space-5, 1.25rem) var(--ll-space-6, 1.5rem);
        border-bottom: 1px solid var(--ll-border-light, rgba(0, 0, 0, 0.08));
        background: var(--ll-bg-primary, #ffffff);
    }

    .ll-lesson-header {
        display: flex;
        align-items: flex-start;
        gap: var(--ll-space-4, 1rem);
    }

    /* Instructor Avatar */
    .ll-instructor-section {
        flex-shrink: 0;
    }

    .ll-instructor-avatar {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid var(--ll-gray-200, #e8e8e8);
    }

    .ll-avatar-placeholder {
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--ll-gray-200, #e8e8e8);
        color: var(--ll-gray-500, #8c8c8c);
        font-size: 20px;
    }

    /* Lesson Meta */
    .ll-lesson-meta {
        flex: 1;
        min-width: 0;
    }

    .ll-lesson-title-main {
        font-size: var(--ll-font-size-xl, 1.5rem);
        font-weight: var(--ll-font-weight-semibold, 600);
        color: var(--ll-text-primary, rgba(0, 0, 0, 0.9));
        line-height: 1.3;
        margin: 0 0 var(--ll-space-2, 0.5rem) 0;
    }

    .ll-lesson-subtitle {
        display: flex;
        align-items: center;
        gap: var(--ll-space-2, 0.5rem);
        flex-wrap: wrap;
        font-size: var(--ll-font-size-sm, 0.875rem);
        color: var(--ll-text-secondary, rgba(0, 0, 0, 0.6));
    }

    .ll-lesson-subtitle-item {
        display: flex;
        align-items: center;
        gap: 4px;
    }

    .ll-divider {
        color: var(--ll-gray-400, #b0b0b0);
    }

    .ll-instructor-link {
        color: var(--ll-primary, #0073b1);
        text-decoration: none;
        font-weight: var(--ll-font-weight-medium, 500);
    }

    .ll-instructor-link:hover {
        text-decoration: underline;
    }

    .ll-subtitle-badge {
        background: var(--ll-gray-100, #f3f2ef);
        padding: 2px 8px;
        border-radius: 12px;
        font-size: var(--ll-font-size-xs, 0.75rem);
    }

    .ll-auto-badge {
        background: var(--ll-primary, #0073b1);
        color: white;
        font-size: 9px;
        padding: 1px 4px;
        border-radius: 4px;
        margin-left: 4px;
        font-weight: var(--ll-font-weight-semibold, 600);
    }

    /* Course Progress */
    .ll-course-progress {
        display: flex;
        align-items: center;
        gap: var(--ll-space-3, 0.75rem);
        margin-top: var(--ll-space-3, 0.75rem);
    }

    .ll-course-progress-bar {
        flex: 1;
        max-width: 200px;
        height: 4px;
        background: var(--ll-gray-200, #e8e8e8);
        border-radius: 2px;
        overflow: hidden;
    }

    .ll-course-progress-fill {
        height: 100%;
        background: var(--ll-success, #057642);
        border-radius: 2px;
        transition: width 0.3s ease;
    }

    .ll-course-progress-text {
        font-size: var(--ll-font-size-xs, 0.75rem);
        color: var(--ll-success, #057642);
        font-weight: var(--ll-font-weight-medium, 500);
    }

    /* Action Buttons */
    .ll-lesson-actions {
        display: flex;
        align-items: center;
        gap: var(--ll-space-1, 0.25rem);
        flex-shrink: 0;
    }

    .ll-action-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 4px;
        min-width: 40px;
        height: 40px;
        padding: 0 var(--ll-space-2, 0.5rem);
        border: none;
        background: transparent;
        border-radius: var(--ll-radius-full, 9999px);
        color: var(--ll-text-secondary, rgba(0, 0, 0, 0.6));
        cursor: pointer;
        transition: all 0.2s ease;
        font-size: var(--ll-font-size-sm, 0.875rem);
    }

    .ll-action-btn:hover {
        background: var(--ll-gray-100, #f3f2ef);
        color: var(--ll-text-primary, rgba(0, 0, 0, 0.9));
    }

    .ll-action-btn.active {
        color: var(--ll-error, #cc1016);
    }

    .ll-action-btn.active:hover {
        background: var(--ll-error-light, #f8d7da);
    }

    .ll-action-count {
        font-size: var(--ll-font-size-xs, 0.75rem);
    }

    /* Dropdown Menu */
    .ll-action-dropdown {
        position: relative;
    }

    .ll-dropdown-menu {
        position: absolute;
        top: 100%;
        right: 0;
        margin-top: var(--ll-space-1, 0.25rem);
        min-width: 180px;
        background: var(--ll-bg-primary, #ffffff);
        border-radius: var(--ll-radius-lg, 8px);
        box-shadow: var(--ll-shadow-dropdown, 0 8px 16px rgba(0, 0, 0, 0.15));
        overflow: hidden;
        z-index: var(--ll-z-dropdown, 100);
        animation: ll-fade-in-down 0.15s ease;
    }

    .ll-dropdown-item {
        display: flex;
        align-items: center;
        gap: var(--ll-space-3, 0.75rem);
        width: 100%;
        padding: var(--ll-space-3, 0.75rem) var(--ll-space-4, 1rem);
        border: none;
        background: transparent;
        text-align: left;
        font-size: var(--ll-font-size-sm, 0.875rem);
        color: var(--ll-text-primary, rgba(0, 0, 0, 0.9));
        cursor: pointer;
        transition: background 0.15s ease;
    }

    .ll-dropdown-item:hover {
        background: var(--ll-gray-100, #f3f2ef);
    }

    .ll-dropdown-item i {
        width: 16px;
        color: var(--ll-text-secondary, rgba(0, 0, 0, 0.6));
    }

    /* Course Banner */
    .ll-course-banner {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-top: var(--ll-space-4, 1rem);
        padding-top: var(--ll-space-4, 1rem);
        border-top: 1px solid var(--ll-border-light, rgba(0, 0, 0, 0.08));
    }

    .ll-course-banner-info {
        display: flex;
        align-items: center;
        gap: var(--ll-space-2, 0.5rem);
    }

    .ll-course-label {
        font-size: var(--ll-font-size-sm, 0.875rem);
        color: var(--ll-text-secondary, rgba(0, 0, 0, 0.6));
    }

    .ll-course-link {
        font-size: var(--ll-font-size-sm, 0.875rem);
        color: var(--ll-primary, #0073b1);
        text-decoration: none;
        font-weight: var(--ll-font-weight-medium, 500);
    }

    .ll-course-link:hover {
        text-decoration: underline;
    }

    .ll-category-badge {
        font-size: var(--ll-font-size-xs, 0.75rem);
        padding: 4px 12px;
        background: var(--ll-gray-100, #f3f2ef);
        border-radius: var(--ll-radius-full, 9999px);
        color: var(--ll-text-secondary, rgba(0, 0, 0, 0.6));
    }

    /* Animation */
    @@keyframes ll-fade-in-down {
        from {
            opacity: 0;
            transform: translateY(-8px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Responsive */
    @@media (max-width: 767px) {
        .ll-lesson-info-section {
            padding: var(--ll-space-4, 1rem);
        }

        .ll-lesson-header {
            flex-direction: column;
            align-items: stretch;
        }

        .ll-instructor-section {
            display: flex;
            align-items: center;
            gap: var(--ll-space-3, 0.75rem);
        }

        .ll-lesson-title-main {
            font-size: var(--ll-font-size-lg, 1.25rem);
        }

        .ll-lesson-actions {
            justify-content: flex-start;
            margin-top: var(--ll-space-3, 0.75rem);
        }

        .ll-course-banner {
            flex-direction: column;
            align-items: flex-start;
            gap: var(--ll-space-2, 0.5rem);
        }
    }
</style>

@code {
    [Parameter] public string LessonTitle { get; set; } = "";
    [Parameter] public string InstructorName { get; set; } = "";
    [Parameter] public string InstructorAvatarUrl { get; set; } = "";
    [Parameter] public Guid? InstructorId { get; set; }
    [Parameter] public int DurationMinutes { get; set; }
    [Parameter] public bool HasSubtitles { get; set; }
    [Parameter] public bool IsAutoGeneratedSubtitle { get; set; }
    [Parameter] public bool HasTranscript { get; set; }
    [Parameter] public int CurrentLessonIndex { get; set; }
    [Parameter] public int TotalLessons { get; set; }
    [Parameter] public int CourseProgressPercent { get; set; }
    [Parameter] public string CourseName { get; set; } = "";
    [Parameter] public Guid? CourseId { get; set; }
    [Parameter] public string CategoryName { get; set; } = "";
    [Parameter] public int LikesCount { get; set; }
    [Parameter] public bool IsLiked { get; set; }
    [Parameter] public bool IsSaved { get; set; }

    [Parameter] public EventCallback OnLikeClick { get; set; }
    [Parameter] public EventCallback OnSaveClick { get; set; }
    [Parameter] public EventCallback OnShareClick { get; set; }
    [Parameter] public EventCallback OnReportClick { get; set; }
    [Parameter] public EventCallback OnDownloadClick { get; set; }
    [Parameter] public EventCallback OnTranscriptDownload { get; set; }

    private bool showMoreMenu = false;

    private async Task HandleLikeClick()
    {
        await OnLikeClick.InvokeAsync();
    }

    private async Task HandleSaveClick()
    {
        await OnSaveClick.InvokeAsync();
    }

    private async Task HandleShareClick()
    {
        showMoreMenu = false;
        await OnShareClick.InvokeAsync();
    }

    private void ToggleMoreMenu()
    {
        showMoreMenu = !showMoreMenu;
    }

    private async Task HandleReportClick()
    {
        showMoreMenu = false;
        await OnReportClick.InvokeAsync();
    }

    private async Task HandleDownloadClick()
    {
        showMoreMenu = false;
        await OnDownloadClick.InvokeAsync();
    }

    private async Task HandleTranscriptDownload()
    {
        showMoreMenu = false;
        await OnTranscriptDownload.InvokeAsync();
    }

    private string FormatDuration(int minutes)
    {
        if (minutes < 1)
            return "< 1 min";
        else if (minutes < 60)
            return $"{minutes} min";
        else
        {
            var hours = minutes / 60;
            var remainingMinutes = minutes % 60;
            if (remainingMinutes == 0)
                return $"{hours}h";
            else
                return $"{hours}h {remainingMinutes}m";
        }
    }

    private string FormatCount(int count)
    {
        if (count >= 1000000)
            return $"{count / 1000000.0:F1}M";
        if (count >= 1000)
            return $"{count / 1000.0:F1}K";
        return count.ToString();
    }
}
