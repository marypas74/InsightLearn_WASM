@*
    Enhanced VideoPlayer Component with JS Interop
    Part of Student Learning Space v2.1.0

    Features:
    - MongoDB GridFS video streaming
    - Progress tracking (every 5 seconds)
    - Timestamp navigation (SeekToAsync)
    - Event callbacks (OnTimeUpdate, OnPlayStateChanged, OnVideoEnded)
    - Proper disposal pattern (IAsyncDisposable)

    Code-behind: VideoPlayer.razor.cs
    JavaScript: wwwroot/js/videoPlayer.js
*@

<div class="video-player-container">
    @if (isLoading)
    {
        <div class="video-loading">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading video...</span>
            </div>
            <p>Loading video...</p>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="video-error alert alert-danger">
            <i class="fas fa-exclamation-triangle"></i>
            <p>@errorMessage</p>
            <button class="btn btn-sm btn-primary" @onclick="RetryLoad">
                <i class="fas fa-redo"></i> Retry
            </button>
        </div>
    }
    else
    {
        <div class="video-wrapper">
            <video
                id="@videoId"
                class="video-element"
                controls="@ShowControls"
                autoplay="@AutoPlay"
                preload="metadata">
                <source src="@videoUrl" type="@contentType" />
                Your browser does not support the video tag.
            </video>

            @if (ShowMetadata && metadata != null)
            {
                <div class="video-metadata">
                    <div class="metadata-item">
                        <strong>File:</strong> @metadata.FileName
                    </div>
                    <div class="metadata-item">
                        <strong>Size:</strong> @FormatFileSize(metadata.FileSize)
                        @if (metadata.CompressedSize > 0 && metadata.CompressedSize < metadata.FileSize)
                        {
                            <span class="text-muted">
                                (Compressed: @FormatFileSize(metadata.CompressedSize),
                                Ratio: @metadata.CompressionRatio.ToString("F2")x)
                            </span>
                        }
                    </div>
                    <div class="metadata-item">
                        <strong>Format:</strong> @metadata.Format
                    </div>
                    <div class="metadata-item">
                        <strong>Uploaded:</strong> @metadata.UploadDate.ToString("MMM dd, yyyy HH:mm")
                    </div>
                </div>
            }
        </div>
    }
</div>
