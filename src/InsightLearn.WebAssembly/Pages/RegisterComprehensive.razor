@page "/register-comprehensive"
@inject IAuthService AuthService
@inject NavigationManager Navigation
@inject IToastService Toast
@using Microsoft.AspNetCore.Components.Forms

<PageTitle>Complete Registration - InsightLearn</PageTitle>

<div class="auth-page">
    <div class="auth-container">
        <div class="auth-header">
            <h1>Create Your Account</h1>
            <p>Join thousands of learners worldwide</p>
        </div>

        <EditForm Model="registerModel" OnValidSubmit="HandleRegister" class="auth-form">
            <DataAnnotationsValidator />

            <!-- Email -->
            <div class="form-group">
                <label>Email Address *</label>
                <InputText @bind-Value="registerModel.Email" class="form-control" placeholder="your@email.com" />
                <ValidationMessage For="@(() => registerModel.Email)" />
            </div>

            <!-- Password -->
            <div class="form-group">
                <label>Password *</label>
                <InputText @bind-Value="registerModel.Password" type="password" class="form-control" />
                <ValidationMessage For="@(() => registerModel.Password)" />
            </div>

            <!-- Confirm Password -->
            <div class="form-group">
                <label>Confirm Password *</label>
                <InputText @bind-Value="registerModel.ConfirmPassword" type="password" class="form-control" />
                <ValidationMessage For="@(() => registerModel.ConfirmPassword)" />
            </div>

            <!-- First Name -->
            <div class="form-group">
                <label>First Name</label>
                <InputText @bind-Value="registerModel.FirstName" class="form-control" />
            </div>

            <!-- Last Name -->
            <div class="form-group">
                <label>Last Name</label>
                <InputText @bind-Value="registerModel.LastName" class="form-control" />
            </div>

            <!-- Terms -->
            <div class="form-group">
                <label class="checkbox-label">
                    <InputCheckbox @bind-Value="acceptTerms" />
                    I accept the <a href="/terms">Terms of Service</a> and <a href="/privacy">Privacy Policy</a>
                </label>
            </div>

            <button type="submit" class="btn btn-primary btn-block" disabled="@(!acceptTerms)">
                Create Account
            </button>
        </EditForm>

        <div class="auth-footer">
            <p>Already have an account? <a href="/login">Sign in</a></p>
        </div>
    </div>
</div>

@code {
    private RegisterRequest registerModel = new();
    private bool acceptTerms = false;

    private async Task HandleRegister()
    {
        if (!acceptTerms)
        {
            Toast.ShowError("Please accept the terms and conditions");
            return;
        }

        var result = await AuthService.RegisterAsync(registerModel);
        if (result.Success)
        {
            Toast.ShowSuccess("Registration successful! Please check your email.");
            Navigation.NavigateTo("/signup-complete");
        }
        else
        {
            Toast.ShowError(result.Message ?? "Registration failed");
        }
    }
}
