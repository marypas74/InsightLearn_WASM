                new() { Id = Guid.NewGuid(), Name = "Marketing" }
            };

            instructors = new List<InstructorItem>
            {
                new() { Id = Guid.NewGuid(), Name = "John Doe" },
                new() { Id = Guid.NewGuid(), Name = "Jane Smith" },
                new() { Id = Guid.NewGuid(), Name = "Bob Wilson" }
            };

            // Initialize with one section
            course.Sections.Add(new SectionModel { Title = "Introduction" });
            course.LearningOutcomes.Add("");
            course.Prerequisites.Add("");

            await Task.Delay(300);
            isLoading = false;
        }
        catch (Exception ex)
        {
            Toast.ShowError("Failed to load data");
            Console.WriteLine($"Load error: {ex}");
            isLoading = false;
        }
    }

    private void NextStep()
    {
        if (ValidateCurrentStep())
        {
            currentStep++;
        }
    }

    private void PreviousStep()
    {
        if (currentStep > 0)
            currentStep--;
    }

    private bool ValidateCurrentStep()
    {
        validationErrors.Clear();

        if (currentStep == 0)
        {
            if (string.IsNullOrWhiteSpace(course.Title))
                validationErrors["Title"] = "Title is required";
            if (string.IsNullOrWhiteSpace(course.Description))
                validationErrors["Description"] = "Description is required";
            if (course.CategoryId == Guid.Empty)
                validationErrors["CategoryId"] = "Please select a category";
            if (course.InstructorId == Guid.Empty)
                validationErrors["InstructorId"] = "Please select an instructor";
        }

        return validationErrors.Count == 0;
    }

    private string GetValidationClass(string field)
    {
        return validationErrors.ContainsKey(field) ? "is-invalid" : "";
    }

    private void HandleTagKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(newTag))
        {
            if (course.Tags.Count < 10 && !course.Tags.Contains(newTag.Trim()))
            {
                course.Tags.Add(newTag.Trim());
            }
            newTag = "";
        }
    }

    private void RemoveTag(string tag) => course.Tags.Remove(tag);

