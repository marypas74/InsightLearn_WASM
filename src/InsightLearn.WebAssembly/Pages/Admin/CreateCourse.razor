    {
        course.IsFree = isFree;
        if (isFree)
        {
            course.Price = 0;
            course.DiscountPrice = null;
        }
        else
        {
            course.Price = 49.99m;
        }
    }

    private string GetCurrencySymbol() => course.Currency switch
    {
        "EUR" => "€",
        "GBP" => "£",
        _ => "$"
    };

