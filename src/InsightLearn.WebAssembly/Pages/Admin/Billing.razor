@page "/admin/billing"
@attribute [Authorize(Roles = "Admin")]

<PageTitle>Billing Management - Admin</PageTitle>

<div class="admin-page">
    <div class="container">
        <div class="admin-card">
            <div class="icon"><i class="fas fa-file-invoice-dollar"></i></div>
            <h1>Billing Management</h1>
            <p class="subtitle">Admin Dashboard</p>
            <p class="description">Manage platform billing, invoices, and payment configurations.</p>
            <div class="features">
                <div class="feature"><i class="fas fa-receipt"></i><span>Invoice Management</span></div>
                <div class="feature"><i class="fas fa-credit-card"></i><span>Payment Gateway</span></div>
                <div class="feature"><i class="fas fa-chart-pie"></i><span>Revenue Reports</span></div>
                <div class="feature"><i class="fas fa-cog"></i><span>Billing Settings</span></div>
            </div>
            <a href="/admin" class="btn btn-primary">Back to Admin</a>
        </div>
    </div>
</div>

<style>
    .admin-page { min-height: 100vh; background: linear-gradient(135deg, #1e3a5f 0%, #0f172a 100%); display: flex; align-items: center; justify-content: center; padding: 40px 20px; }
    .admin-card { background: white; border-radius: 24px; padding: 3rem; max-width: 600px; text-align: center; box-shadow: 0 25px 50px rgba(0,0,0,0.25); }
    .icon { width: 80px; height: 80px; background: linear-gradient(135deg, #10b981 0%, #059669 100%); border-radius: 20px; display: flex; align-items: center; justify-content: center; margin: 0 auto 1.5rem; }
    .icon i { font-size: 2rem; color: white; }
    h1 { font-size: 2rem; font-weight: 700; color: #1c1d1f; margin-bottom: 0.5rem; }
    .subtitle { color: #10b981; font-weight: 600; margin-bottom: 1.5rem; }
    .description { color: #6b7280; line-height: 1.7; margin-bottom: 2rem; }
    .features { display: grid; grid-template-columns: repeat(2, 1fr); gap: 1rem; margin-bottom: 2rem; }
    .feature { display: flex; align-items: center; gap: 0.75rem; padding: 0.75rem 1rem; background: #f3f4f6; border-radius: 8px; font-size: 0.875rem; color: #374151; }
    .feature i { color: #10b981; }
    .btn-primary { display: inline-block; padding: 0.875rem 1.5rem; background: #10b981; color: white; border-radius: 8px; font-weight: 600; text-decoration: none; }
</style>