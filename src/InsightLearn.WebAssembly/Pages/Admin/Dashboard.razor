@page "/admin"
@page "/admin/dashboard"
@attribute [Authorize(Roles = "Admin")]
@inject NavigationManager Navigation
@inject InsightLearn.WebAssembly.Services.Admin.IAdminDashboardService DashboardService
@inject Blazored.Toast.Services.IToastService Toast
@using Microsoft.AspNetCore.Authorization
@using InsightLearn.WebAssembly.Models.Admin

<PageTitle>Admin Dashboard - InsightLearn</PageTitle>

<div class="dashboard-layout">
    <div class="breadcrumb-nav">
        <nav class="breadcrumb">
            <a href="/" class="breadcrumb-item">Home</a>
            <span class="breadcrumb-separator">/</span>
            <span class="breadcrumb-item active">Admin Dashboard</span>
        </nav>
    </div>

    <div class="page-header">
        <h1 class="page-title">Admin Dashboard</h1>
        <p class="page-description">Monitor and manage your learning platform</p>
    </div>

    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner spinner-lg"></div>
            <p>Loading dashboard...</p>
        </div>
    }
    else if (error != null)
    {
        <div class="error-state">
            <i class="fas fa-exclamation-triangle"></i>
            <h3>@error</h3>
            <button class="btn btn-primary" @onclick="LoadDashboard">Retry</button>
        </div>
    }
    else if (stats != null)
    {
        <!-- Metrics Grid -->
        <div class="metrics-grid">
            <div class="metric-card">
                <div class="metric-icon users">
                    <i class="fas fa-users"></i>
                </div>
                <div class="metric-content">
                    <div class="metric-value">@stats.TotalUsers</div>
                    <div class="metric-label">Total Users</div>
                </div>
            </div>
            <div class="metric-card">
                <div class="metric-icon courses">
                    <i class="fas fa-book"></i>
                </div>
                <div class="metric-content">
                    <div class="metric-value">@stats.TotalCourses</div>
                    <div class="metric-label">Total Courses</div>
                </div>
            </div>
            <div class="metric-card">
                <div class="metric-icon enrollments">
                    <i class="fas fa-graduation-cap"></i>
                </div>
                <div class="metric-content">
                    <div class="metric-value">@stats.TotalEnrollments</div>
                    <div class="metric-label">Enrollments</div>
                </div>
            </div>
            <div class="metric-card">
                <div class="metric-icon revenue">
                    <i class="fas fa-dollar-sign"></i>
                </div>
                <div class="metric-content">
                    <div class="metric-value">â‚¬@stats.TotalRevenue.ToString("N2")</div>
                    <div class="metric-label">Total Revenue</div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="clean-card">
            <div class="card-header">
                <h2>Quick Actions</h2>
            </div>
            <div class="card-content">
                <div class="quick-actions-grid">
                    <button class="action-button" @onclick='() => Navigation.NavigateTo("/admin/users")'>
                        <i class="fas fa-users"></i>
                        <span>Manage Users</span>
                    </button>
                    <button class="action-button" @onclick='() => Navigation.NavigateTo("/admin/courses")'>
                        <i class="fas fa-book"></i>
                        <span>Manage Courses</span>
                    </button>
                    <button class="action-button" @onclick='() => Navigation.NavigateTo("/admin/categories")'>
                        <i class="fas fa-tags"></i>
                        <span>Manage Categories</span>
                    </button>
                    <button class="action-button" @onclick='() => Navigation.NavigateTo("/admin/analytics")'>
                        <i class="fas fa-chart-line"></i>
                        <span>View Analytics</span>
                    </button>
                    <button class="action-button" @onclick='() => Navigation.NavigateTo("/admin/reports")'>
                        <i class="fas fa-file-alt"></i>
                        <span>Generate Reports</span>
                    </button>
                    <button class="action-button" @onclick='() => Navigation.NavigateTo("/admin/settings")'>
                        <i class="fas fa-cog"></i>
                        <span>System Settings</span>
                    </button>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="clean-card">
            <div class="card-header">
                <h2>Recent Activity</h2>
            </div>
            <div class="card-content">
                @if (recentActivity?.Any() == true)
                {
                    <div class="activity-list">
                        @foreach (var activity in recentActivity)
                        {
                            <div class="activity-item">
                                <div class="activity-icon">
                                    <i class="fas fa-@activity.Icon"></i>
                                </div>
                                <div class="activity-content">
                                    <p class="activity-text">@activity.Description</p>
                                    <span class="activity-time">@FormatRelativeTime(activity.Timestamp)</span>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="empty-text">No recent activity</p>
                }
            </div>
        </div>
    }
</div>

@code {
    private bool isLoading = true;
    private string? error;
    private DashboardStats? stats;
    private List<RecentActivity>? recentActivity;

    protected override async Task OnInitializedAsync()
    {
        await LoadDashboard();
    }

    private async Task LoadDashboard()
    {
        try
        {
            isLoading = true;
            error = null;

            stats = await DashboardService.GetStatsAsync();
            recentActivity = await DashboardService.GetRecentActivityAsync(10);

            if (stats == null)
            {
                error = "Failed to load dashboard statistics";
                Toast.ShowError(error);
            }
        }
        catch (Exception ex)
        {
            error = "An error occurred while loading the dashboard";
            Toast.ShowError(error);
            Console.WriteLine($"Admin dashboard error: {ex}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private string FormatRelativeTime(DateTime timestamp)
    {
        var timeSpan = DateTime.UtcNow - timestamp;

        if (timeSpan.TotalMinutes < 1)
            return "just now";
        if (timeSpan.TotalMinutes < 60)
            return $"{(int)timeSpan.TotalMinutes} minutes ago";
        if (timeSpan.TotalHours < 24)
            return $"{(int)timeSpan.TotalHours} hours ago";
        if (timeSpan.TotalDays < 7)
            return $"{(int)timeSpan.TotalDays} days ago";

        return timestamp.ToString("MMM dd, yyyy");
    }
}
