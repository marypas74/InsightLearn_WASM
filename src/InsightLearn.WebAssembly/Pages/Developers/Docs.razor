@page "/developers/docs"
@page "/docs"
@page "/api-docs"
@page "/documentation"
@using InsightLearn.WebAssembly.Components.SEO

<SeoMetaTags
    Title="API Documentation - InsightLearn Developer Portal"
    Description="Comprehensive API documentation for InsightLearn. Learn how to integrate courses, manage users, and build powerful learning experiences with our REST APIs."
    Keywords="API documentation, developer docs, REST API, InsightLearn API, integration guide"
    PageType="WebPage" />

<PageTitle>API Documentation - InsightLearn</PageTitle>

<div class="docs-page">
    <div class="container">
        <div class="coming-soon-card">
            <div class="icon">
                <i class="fas fa-book-open"></i>
            </div>
            <h1>API Documentation</h1>
            <p class="subtitle">Developer Portal</p>
            <p class="description">
                Our comprehensive API documentation is coming soon. Build powerful integrations
                with InsightLearn's REST APIs for courses, users, enrollments, and analytics.
            </p>
            <div class="features-preview">
                <div class="feature">
                    <i class="fas fa-code"></i>
                    <span>REST API Reference</span>
                </div>
                <div class="feature">
                    <i class="fas fa-plug"></i>
                    <span>Integration Guides</span>
                </div>
                <div class="feature">
                    <i class="fas fa-flask"></i>
                    <span>API Sandbox</span>
                </div>
                <div class="feature">
                    <i class="fas fa-download"></i>
                    <span>SDK Downloads</span>
                </div>
            </div>
            <div class="cta-buttons">
                <a href="/contact?subject=partnership" class="btn btn-primary">Request API Access</a>
                <a href="/console/dashboard" class="btn btn-outline">Developer Console</a>
            </div>
        </div>
    </div>
</div>

<style>
    .docs-page {
        min-height: 100vh;
        background: linear-gradient(135deg, #0f172a 0%, #1e1b4b 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
    }

    .coming-soon-card {
        background: #1e293b;
        border-radius: 24px;
        padding: 3rem;
        max-width: 600px;
        text-align: center;
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5);
        border: 1px solid #334155;
    }

    .icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
    }

    .icon i {
        font-size: 2rem;
        color: white;
    }

    h1 {
        font-size: 2rem;
        font-weight: 700;
        color: white;
        margin-bottom: 0.5rem;
    }

    .subtitle {
        color: #06b6d4;
        font-weight: 600;
        margin-bottom: 1.5rem;
    }

    .description {
        color: #94a3b8;
        line-height: 1.7;
        margin-bottom: 2rem;
    }

    .features-preview {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .feature {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1rem;
        background: #334155;
        border-radius: 8px;
        font-size: 0.875rem;
        color: #e2e8f0;
    }

    .feature i {
        color: #06b6d4;
    }

    .cta-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn {
        padding: 0.875rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s;
    }

    .btn-primary {
        background: #06b6d4;
        color: white;
    }

    .btn-primary:hover {
        background: #0891b2;
    }

    .btn-outline {
        border: 2px solid #475569;
        color: #e2e8f0;
        background: transparent;
    }

    .btn-outline:hover {
        border-color: #06b6d4;
        color: #06b6d4;
    }

    @@media (max-width: 576px) {
        .features-preview {
            grid-template-columns: 1fr;
        }
    }
</style>