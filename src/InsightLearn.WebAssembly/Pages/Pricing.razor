</style>

@code {
    private string selectedDeployment = "single";

    private void SelectDeployment(string deployment)
    {
        selectedDeployment = deployment;
    }

    private void RequestQuote()
    {
        Navigation.NavigateTo("/contact-sales?type=quote&tier=starter");
    }

    private void RequestArchitectureReview()
    {
        Navigation.NavigateTo("/contact-sales?type=architecture-review&tier=professional");
    }

    private void ContactEnterprise()
    {
        Navigation.NavigateTo("/contact-sales?type=enterprise");
    }
}
