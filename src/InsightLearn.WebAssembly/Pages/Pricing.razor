@page "/pricing"
@page "/solutions"
@page "/solutions/infrastructure"
@using InsightLearn.WebAssembly.Components.SEO
@inject NavigationManager Navigation

<SeoMetaTags
    Title="Infrastructure Solutions - Dedicated Cloud Deployments | InsightLearn"
    Description="Enterprise-grade dedicated infrastructure for learning platforms. Data sovereignty, isolated environments, custom scalability. SOC2, GDPR, HIPAA compliant deployments."
    Keywords="dedicated infrastructure, enterprise LMS, data sovereignty, private cloud, isolated deployment, SOC2 compliant, GDPR, learning platform infrastructure"
    PageType="Product"
    Author="InsightLearn Infrastructure Team" />

<PageTitle>Infrastructure Solutions - InsightLearn</PageTitle>

<div class="infrastructure-container">
    <!-- Hero Section -->
    <section class="infrastructure-hero">
        <div class="container">
            <span class="hero-badge">Enterprise Infrastructure</span>
            <h1>Dedicated Cloud Infrastructure</h1>
            <p class="hero-subtitle">
                Deploy your learning platform on isolated, enterprise-grade infrastructure
                sized to your organization's compliance, performance, and scalability requirements.
            </p>
            <div class="hero-stats">
                <div class="stat-item">
                    <span class="stat-value">99.99%</span>
                    <span class="stat-label">Uptime SLA</span>
                </div>
                <div class="stat-item">
                    <span class="stat-value">150+</span>
                    <span class="stat-label">Enterprise Deployments</span>
                </div>
                <div class="stat-item">
                    <span class="stat-value">SOC2</span>
                    <span class="stat-label">Type II Certified</span>
                </div>
            </div>
        </div>
    </section>

    <!-- Deployment Toggle -->
    <section class="deployment-options">
        <div class="container">
            <div class="deployment-toggle">
                <button class="btn @(selectedDeployment == "single" ? "btn-primary" : "btn-outline-primary")"
                        @onclick='() => SelectDeployment("single")'>
                    <i class="fas fa-server"></i>
                    Single Region
                </button>
                <button class="btn @(selectedDeployment == "multi" ? "btn-primary" : "btn-outline-primary")"
                        @onclick='() => SelectDeployment("multi")'>
                    <i class="fas fa-globe"></i>
                    Multi-Region
                    <span class="badge bg-info ms-2">HA</span>
                </button>
                <button class="btn @(selectedDeployment == "hybrid" ? "btn-primary" : "btn-outline-primary")"
                        @onclick='() => SelectDeployment("hybrid")'>
                    <i class="fas fa-building"></i>
                    Hybrid / On-Premise
                </button>
            </div>
        </div>
    </section>

    <!-- Infrastructure Configurations -->
    <section class="infrastructure-configs">
        <div class="container">
            <div class="configs-grid">
                <!-- Starter Node -->
                <div class="config-card">
                    <div class="config-header">
                        <span class="config-tier">Starter</span>
                        <h3>Dedicated Node</h3>
                        <p class="config-description">
                            Single-tenant deployment for teams and departments up to 500 concurrent users
                        </p>
                    </div>

                    <div class="config-specs">
                        <div class="spec-item">
                            <i class="fas fa-microchip"></i>
                            <span>8 vCPU</span>
                        </div>
                        <div class="spec-item">
                            <i class="fas fa-memory"></i>
                            <span>32 GB RAM</span>
                        </div>
                        <div class="spec-item">
                            <i class="fas fa-hdd"></i>
                            <span>500 GB NVMe SSD</span>
                        </div>
                        <div class="spec-item">
                            <i class="fas fa-users"></i>
                            <span>Up to 500 Users</span>
                        </div>
                    </div>

                    <ul class="config-features">
                        <li><i class="fas fa-check text-success"></i> Dedicated compute resources</li>
                        <li><i class="fas fa-check text-success"></i> Network isolation (VPC)</li>
                        <li><i class="fas fa-check text-success"></i> Daily automated backups</li>
                        <li><i class="fas fa-check text-success"></i> SSL/TLS encryption</li>
                        <li><i class="fas fa-check text-success"></i> 99.5% Uptime SLA</li>
                        <li><i class="fas fa-check text-success"></i> Email support (24h response)</li>
                    </ul>

                    <div class="config-pricing">
                        <span class="price-label">Starting from</span>
                        <div class="price-value">Custom Quote</div>
                        <span class="price-note">Based on deployment region</span>
                    </div>

                    <button class="btn btn-outline-primary btn-config" @onclick="RequestQuote">
                        <i class="fas fa-file-invoice"></i>
                        Request Quote
                    </button>
                </div>

                <!-- Professional Cluster -->
                <div class="config-card featured">
                    <div class="featured-badge">Most Deployed</div>
                    <div class="config-header">
                        <span class="config-tier">Professional</span>
                        <h3>HA Cluster</h3>
                        <p class="config-description">
                            High-availability cluster for organizations with 500-5,000 concurrent users
                        </p>
                    </div>

                    <div class="config-specs">
                        <div class="spec-item">
                            <i class="fas fa-microchip"></i>
                            <span>32 vCPU (4x8)</span>
                        </div>
                        <div class="spec-item">
                            <i class="fas fa-memory"></i>
                            <span>128 GB RAM</span>
                        </div>
                        <div class="spec-item">
                            <i class="fas fa-hdd"></i>
                            <span>2 TB NVMe SSD</span>
                        </div>
                        <div class="spec-item">
                            <i class="fas fa-users"></i>
                            <span>Up to 5,000 Users</span>
                        </div>
                    </div>

                    <ul class="config-features">
                        <li><i class="fas fa-check text-success"></i> Multi-node Kubernetes cluster</li>
                        <li><i class="fas fa-check text-success"></i> Automatic failover & load balancing</li>
                        <li><i class="fas fa-check text-success"></i> Cross-zone replication</li>
                        <li><i class="fas fa-check text-success"></i> Point-in-time recovery (30 days)</li>
                        <li><i class="fas fa-check text-success"></i> 99.9% Uptime SLA</li>
                        <li><i class="fas fa-check text-success"></i> Priority support (4h response)</li>
                        <li><i class="fas fa-check text-success"></i> Quarterly architecture reviews</li>
                    </ul>

                    <div class="config-pricing">
                        <span class="price-label">Starting from</span>
                        <div class="price-value">Custom Quote</div>
                        <span class="price-note">Annual contract required</span>
                    </div>

                    <button class="btn btn-primary btn-config" @onclick="RequestArchitectureReview">
                        <i class="fas fa-drafting-compass"></i>
                        Request Architecture Review
                    </button>
                </div>

                <!-- Enterprise Private Cloud -->
                <div class="config-card">
                    <div class="config-header">
                        <span class="config-tier">Enterprise</span>
                        <h3>Private Cloud</h3>
                        <p class="config-description">
                            Fully isolated private cloud for large organizations with 5,000+ concurrent users
                        </p>
                    </div>

                    <div class="config-specs">
                        <div class="spec-item">
                            <i class="fas fa-microchip"></i>
                            <span>Custom vCPU</span>
                        </div>
                        <div class="spec-item">
                            <i class="fas fa-memory"></i>
                            <span>Custom RAM</span>
                        </div>
                        <div class="spec-item">
                            <i class="fas fa-hdd"></i>
                            <span>Custom Storage</span>
                        </div>
                        <div class="spec-item">
                            <i class="fas fa-users"></i>
                            <span>Unlimited Users</span>
                        </div>
                    </div>

                    <ul class="config-features">
                        <li><i class="fas fa-check text-success"></i> Dedicated private cloud environment</li>
                        <li><i class="fas fa-check text-success"></i> Custom network topology</li>
                        <li><i class="fas fa-check text-success"></i> Multi-region geo-replication</li>
                        <li><i class="fas fa-check text-success"></i> Bring Your Own Key (BYOK) encryption</li>
                        <li><i class="fas fa-check text-success"></i> 99.99% Uptime SLA</li>
                        <li><i class="fas fa-check text-success"></i> Dedicated support team (1h response)</li>
                        <li><i class="fas fa-check text-success"></i> On-site deployment support</li>
                        <li><i class="fas fa-check text-success"></i> Custom SLA & compliance audit</li>
                    </ul>

                    <div class="config-pricing">
                        <span class="price-label">Pricing</span>
                        <div class="price-value">Enterprise Agreement</div>
                        <span class="price-note">Multi-year terms available</span>
                    </div>

                    <button class="btn btn-outline-primary btn-config" @onclick="ContactEnterprise">
                        <i class="fas fa-handshake"></i>
                        Contact Enterprise Sales
                    </button>
                </div>
            </div>
        </div>
    </section>

    <!-- Compliance & Security -->
    <section class="compliance-section">
        <div class="container">
            <h2>Enterprise-Grade Security & Compliance</h2>
            <p class="section-subtitle">
                All deployments include comprehensive security controls and compliance certifications
            </p>
            <div class="compliance-grid">
                <div class="compliance-item">
                    <i class="fas fa-shield-alt"></i>
                    <h4>SOC2 Type II</h4>
                    <p>Annual audit certification</p>
                </div>
                <div class="compliance-item">
                    <i class="fas fa-user-shield"></i>
                    <h4>GDPR Compliant</h4>
                    <p>EU data residency options</p>
                </div>
                <div class="compliance-item">
                    <i class="fas fa-hospital"></i>
                    <h4>HIPAA Ready</h4>
                    <p>Healthcare deployments</p>
                </div>
                <div class="compliance-item">
                    <i class="fas fa-lock"></i>
                    <h4>ISO 27001</h4>
                    <p>Information security management</p>
                </div>
                <div class="compliance-item">
                    <i class="fas fa-globe-europe"></i>
                    <h4>Data Sovereignty</h4>
                    <p>Regional data residency</p>
                </div>
                <div class="compliance-item">
                    <i class="fas fa-key"></i>
                    <h4>Encryption at Rest</h4>
                    <p>AES-256 encryption</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Infrastructure FAQ -->
    <section class="infrastructure-faq">
        <div class="container">
            <h2>Infrastructure Questions</h2>
            <div class="faq-grid">
                <div class="faq-item">
                    <h4><i class="fas fa-file-contract"></i> What are the contract terms?</h4>
                    <p>
                        Starter deployments require a minimum 12-month commitment. Professional and Enterprise
                        tiers offer multi-year agreements with volume discounts. All contracts include
                        onboarding, training, and migration support.
                    </p>
                </div>
                <div class="faq-item">
                    <h4><i class="fas fa-map-marker-alt"></i> Where can I deploy?</h4>
                    <p>
                        We offer deployment in 25+ regions across AWS, Azure, and GCP. For data sovereignty
                        requirements, we support EU-only, US-only, or specific country deployments.
                        Hybrid and on-premise options available for Enterprise tier.
                    </p>
                </div>
                <div class="faq-item">
                    <h4><i class="fas fa-sync-alt"></i> What is your DR strategy?</h4>
                    <p>
                        Professional tier includes cross-zone replication with automatic failover (RPO: 1 hour, RTO: 4 hours).
                        Enterprise tier offers multi-region active-active configuration (RPO: 5 minutes, RTO: 15 minutes)
                        with customizable backup retention.
                    </p>
                </div>
                <div class="faq-item">
                    <h4><i class="fas fa-chart-line"></i> How do SLAs work?</h4>
                    <p>
                        Each tier includes a contractual uptime SLA with service credits for violations.
                        Starter: 99.5% (up to 10% credit), Professional: 99.9% (up to 25% credit),
                        Enterprise: 99.99% (up to 50% credit). Custom SLAs available for Enterprise agreements.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="infrastructure-cta">
        <div class="container">
            <h2>Ready to Deploy Your Learning Infrastructure?</h2>
            <p>
                Our infrastructure architects will design a deployment tailored to your
                organization's scale, compliance, and performance requirements.
            </p>
            <div class="cta-buttons">
                <a href="/contact-sales" class="btn btn-primary btn-lg">
                    <i class="fas fa-drafting-compass"></i>
                    Request Architecture Review
                </a>
                <a href="/developers/docs" class="btn btn-outline-light btn-lg">
                    <i class="fas fa-book"></i>
                    Technical Documentation
                </a>
            </div>
        </div>
    </section>
</div>

