@page "/console/billing"
@using InsightLearn.WebAssembly.Components.SEO

<SeoMetaTags
    Title="API Billing - Developer Console | InsightLearn"
    Description="Manage your API billing and usage. View invoices, update payment methods, and monitor your API consumption and costs."
    Keywords="API billing, usage billing, developer pricing, API costs"
    PageType="WebPage" />

<PageTitle>API Billing - InsightLearn</PageTitle>

<div class="console-page">
    <div class="container">
        <div class="coming-soon-card">
            <div class="icon">
                <i class="fas fa-credit-card"></i>
            </div>
            <h1>API Billing</h1>
            <p class="subtitle">Usage & Payments</p>
            <p class="description">
                Manage your API subscription and billing. View usage-based charges, download invoices,
                and update your payment methods securely.
            </p>
            <div class="features-preview">
                <div class="feature">
                    <i class="fas fa-file-invoice-dollar"></i>
                    <span>Invoice History</span>
                </div>
                <div class="feature">
                    <i class="fas fa-chart-pie"></i>
                    <span>Usage Breakdown</span>
                </div>
                <div class="feature">
                    <i class="fas fa-wallet"></i>
                    <span>Payment Methods</span>
                </div>
                <div class="feature">
                    <i class="fas fa-bell"></i>
                    <span>Billing Alerts</span>
                </div>
            </div>
            <div class="cta-buttons">
                <a href="/contact?subject=pricing" class="btn btn-primary">Contact for Pricing</a>
                <a href="/console/dashboard" class="btn btn-outline">Back to Console</a>
            </div>
        </div>
    </div>
</div>

<style>
    .console-page {
        min-height: 100vh;
        background: linear-gradient(135deg, #0f172a 0%, #1e1b4b 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
    }

    .coming-soon-card {
        background: #1e293b;
        border-radius: 24px;
        padding: 3rem;
        max-width: 600px;
        text-align: center;
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5);
        border: 1px solid #334155;
    }

    .icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
    }

    .icon i {
        font-size: 2rem;
        color: white;
    }

    h1 {
        font-size: 2rem;
        font-weight: 700;
        color: white;
        margin-bottom: 0.5rem;
    }

    .subtitle {
        color: #10b981;
        font-weight: 600;
        margin-bottom: 1.5rem;
    }

    .description {
        color: #94a3b8;
        line-height: 1.7;
        margin-bottom: 2rem;
    }

    .features-preview {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .feature {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1rem;
        background: #334155;
        border-radius: 8px;
        font-size: 0.875rem;
        color: #e2e8f0;
    }

    .feature i {
        color: #10b981;
    }

    .cta-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn {
        padding: 0.875rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s;
    }

    .btn-primary {
        background: #10b981;
        color: white;
    }

    .btn-primary:hover {
        background: #059669;
    }

    .btn-outline {
        border: 2px solid #475569;
        color: #e2e8f0;
        background: transparent;
    }

    .btn-outline:hover {
        border-color: #10b981;
        color: #10b981;
    }

    @@media (max-width: 576px) {
        .features-preview {
            grid-template-columns: 1fr;
        }
    }
</style>