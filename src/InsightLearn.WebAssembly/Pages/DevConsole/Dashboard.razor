@page "/console/dashboard"
@page "/console"
@using InsightLearn.WebAssembly.Components.SEO

<SeoMetaTags
    Title="Developer Console - InsightLearn API"
    Description="Access the InsightLearn Developer Console. Monitor API usage, manage integrations, and build applications with our learning platform APIs."
    Keywords="developer console, API dashboard, developer tools, InsightLearn API"
    PageType="WebPage" />

<PageTitle>Developer Console - InsightLearn</PageTitle>

<div class="console-page">
    <div class="container">
        <div class="coming-soon-card">
            <div class="icon">
                <i class="fas fa-terminal"></i>
            </div>
            <h1>Developer Console</h1>
            <p class="subtitle">API & Integration Hub</p>
            <p class="description">
                The Developer Console is coming soon. Build powerful integrations,
                access our APIs, and extend InsightLearn's capabilities in your applications.
            </p>
            <div class="features-preview">
                <div class="feature">
                    <i class="fas fa-key"></i>
                    <span>API Key Management</span>
                </div>
                <div class="feature">
                    <i class="fas fa-chart-area"></i>
                    <span>Usage Analytics</span>
                </div>
                <div class="feature">
                    <i class="fas fa-plug"></i>
                    <span>Webhook Events</span>
                </div>
                <div class="feature">
                    <i class="fas fa-book"></i>
                    <span>API Documentation</span>
                </div>
            </div>
            <div class="cta-buttons">
                <a href="/contact?subject=partnership" class="btn btn-primary">Join Developer Program</a>
                <a href="/faq" class="btn btn-outline">Learn More</a>
            </div>
        </div>
    </div>
</div>

<style>
    .console-page {
        min-height: 100vh;
        background: linear-gradient(135deg, #0f172a 0%, #1e1b4b 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
    }

    .coming-soon-card {
        background: #1e293b;
        border-radius: 24px;
        padding: 3rem;
        max-width: 600px;
        text-align: center;
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5);
        border: 1px solid #334155;
    }

    .icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
    }

    .icon i {
        font-size: 2rem;
        color: white;
    }

    h1 {
        font-size: 2rem;
        font-weight: 700;
        color: white;
        margin-bottom: 0.5rem;
    }

    .subtitle {
        color: #22c55e;
        font-weight: 600;
        margin-bottom: 1.5rem;
    }

    .description {
        color: #94a3b8;
        line-height: 1.7;
        margin-bottom: 2rem;
    }

    .features-preview {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .feature {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1rem;
        background: #334155;
        border-radius: 8px;
        font-size: 0.875rem;
        color: #e2e8f0;
    }

    .feature i {
        color: #22c55e;
    }

    .cta-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn {
        padding: 0.875rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s;
    }

    .btn-primary {
        background: #22c55e;
        color: white;
    }

    .btn-primary:hover {
        background: #16a34a;
    }

    .btn-outline {
        border: 2px solid #475569;
        color: #e2e8f0;
        background: transparent;
    }

    .btn-outline:hover {
        border-color: #22c55e;
        color: #22c55e;
    }

    @@media (max-width: 576px) {
        .features-preview {
            grid-template-columns: 1fr;
        }
    }
</style>