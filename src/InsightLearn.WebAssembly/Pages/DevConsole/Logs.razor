@page "/console/logs"
@using InsightLearn.WebAssembly.Components.SEO

<SeoMetaTags
    Title="API Logs - Developer Console | InsightLearn"
    Description="View detailed API request and response logs. Debug integrations, track errors, and monitor API activity in real-time."
    Keywords="API logs, request logs, debugging, API monitoring"
    PageType="WebPage" />

<PageTitle>API Logs - InsightLearn</PageTitle>

<div class="console-page">
    <div class="container">
        <div class="coming-soon-card">
            <div class="icon">
                <i class="fas fa-scroll"></i>
            </div>
            <h1>API Logs</h1>
            <p class="subtitle">Request & Response History</p>
            <p class="description">
                Access detailed logs of all API requests. Debug integration issues,
                inspect payloads, and trace errors with comprehensive request history.
            </p>
            <div class="features-preview">
                <div class="feature">
                    <i class="fas fa-search"></i>
                    <span>Search & Filter</span>
                </div>
                <div class="feature">
                    <i class="fas fa-code"></i>
                    <span>Request Details</span>
                </div>
                <div class="feature">
                    <i class="fas fa-clock"></i>
                    <span>Timestamp Tracking</span>
                </div>
                <div class="feature">
                    <i class="fas fa-download"></i>
                    <span>Export Logs</span>
                </div>
            </div>
            <div class="cta-buttons">
                <a href="/contact?subject=partnership" class="btn btn-primary">Join Developer Program</a>
                <a href="/console/dashboard" class="btn btn-outline">Back to Console</a>
            </div>
        </div>
    </div>
</div>

<style>
    .console-page {
        min-height: 100vh;
        background: linear-gradient(135deg, #0f172a 0%, #1e1b4b 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
    }

    .coming-soon-card {
        background: #1e293b;
        border-radius: 24px;
        padding: 3rem;
        max-width: 600px;
        text-align: center;
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5);
        border: 1px solid #334155;
    }

    .icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #64748b 0%, #475569 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
    }

    .icon i {
        font-size: 2rem;
        color: white;
    }

    h1 {
        font-size: 2rem;
        font-weight: 700;
        color: white;
        margin-bottom: 0.5rem;
    }

    .subtitle {
        color: #94a3b8;
        font-weight: 600;
        margin-bottom: 1.5rem;
    }

    .description {
        color: #94a3b8;
        line-height: 1.7;
        margin-bottom: 2rem;
    }

    .features-preview {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .feature {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1rem;
        background: #334155;
        border-radius: 8px;
        font-size: 0.875rem;
        color: #e2e8f0;
    }

    .feature i {
        color: #94a3b8;
    }

    .cta-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn {
        padding: 0.875rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s;
    }

    .btn-primary {
        background: #64748b;
        color: white;
    }

    .btn-primary:hover {
        background: #475569;
    }

    .btn-outline {
        border: 2px solid #475569;
        color: #e2e8f0;
        background: transparent;
    }

    .btn-outline:hover {
        border-color: #94a3b8;
        color: #94a3b8;
    }

    @@media (max-width: 576px) {
        .features-preview {
            grid-template-columns: 1fr;
        }
    }
</style>