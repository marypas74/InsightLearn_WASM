@page "/console/webhooks"
@using InsightLearn.WebAssembly.Components.SEO

<SeoMetaTags
    Title="Webhooks - Developer Console | InsightLearn"
    Description="Configure webhook endpoints to receive real-time events from InsightLearn. Automate workflows with event-driven integrations."
    Keywords="webhooks, event notifications, API events, real-time integrations"
    PageType="WebPage" />

<PageTitle>Webhooks - InsightLearn</PageTitle>

<div class="console-page">
    <div class="container">
        <div class="coming-soon-card">
            <div class="icon">
                <i class="fas fa-bolt"></i>
            </div>
            <h1>Webhooks</h1>
            <p class="subtitle">Event Notifications</p>
            <p class="description">
                Receive real-time notifications when events occur. Configure webhook endpoints,
                filter event types, and build automated workflows with InsightLearn events.
            </p>
            <div class="features-preview">
                <div class="feature">
                    <i class="fas fa-link"></i>
                    <span>Endpoint Config</span>
                </div>
                <div class="feature">
                    <i class="fas fa-filter"></i>
                    <span>Event Filtering</span>
                </div>
                <div class="feature">
                    <i class="fas fa-redo"></i>
                    <span>Auto Retry</span>
                </div>
                <div class="feature">
                    <i class="fas fa-lock"></i>
                    <span>Signature Verification</span>
                </div>
            </div>
            <div class="cta-buttons">
                <a href="/contact?subject=partnership" class="btn btn-primary">Join Developer Program</a>
                <a href="/console/dashboard" class="btn btn-outline">Back to Console</a>
            </div>
        </div>
    </div>
</div>

<style>
    .console-page {
        min-height: 100vh;
        background: linear-gradient(135deg, #0f172a 0%, #1e1b4b 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
    }

    .coming-soon-card {
        background: #1e293b;
        border-radius: 24px;
        padding: 3rem;
        max-width: 600px;
        text-align: center;
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5);
        border: 1px solid #334155;
    }

    .icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #ec4899 0%, #db2777 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
    }

    .icon i {
        font-size: 2rem;
        color: white;
    }

    h1 {
        font-size: 2rem;
        font-weight: 700;
        color: white;
        margin-bottom: 0.5rem;
    }

    .subtitle {
        color: #ec4899;
        font-weight: 600;
        margin-bottom: 1.5rem;
    }

    .description {
        color: #94a3b8;
        line-height: 1.7;
        margin-bottom: 2rem;
    }

    .features-preview {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .feature {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1rem;
        background: #334155;
        border-radius: 8px;
        font-size: 0.875rem;
        color: #e2e8f0;
    }

    .feature i {
        color: #ec4899;
    }

    .cta-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn {
        padding: 0.875rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s;
    }

    .btn-primary {
        background: #ec4899;
        color: white;
    }

    .btn-primary:hover {
        background: #db2777;
    }

    .btn-outline {
        border: 2px solid #475569;
        color: #e2e8f0;
        background: transparent;
    }

    .btn-outline:hover {
        border-color: #ec4899;
        color: #ec4899;
    }

    @@media (max-width: 576px) {
        .features-preview {
            grid-template-columns: 1fr;
        }
    }
</style>