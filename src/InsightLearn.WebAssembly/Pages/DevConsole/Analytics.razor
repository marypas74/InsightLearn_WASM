@page "/console/analytics"
@using InsightLearn.WebAssembly.Components.SEO

<SeoMetaTags
    Title="API Analytics - Developer Console | InsightLearn"
    Description="Monitor your API usage and performance metrics. Track requests, response times, and error rates across your InsightLearn integrations."
    Keywords="API analytics, usage metrics, performance monitoring, developer analytics"
    PageType="WebPage" />

<PageTitle>API Analytics - InsightLearn</PageTitle>

<div class="console-page">
    <div class="container">
        <div class="coming-soon-card">
            <div class="icon">
                <i class="fas fa-chart-line"></i>
            </div>
            <h1>API Analytics</h1>
            <p class="subtitle">Usage & Performance Metrics</p>
            <p class="description">
                Get deep insights into your API usage. Monitor request volumes, track latencies,
                identify errors, and optimize your integration performance.
            </p>
            <div class="features-preview">
                <div class="feature">
                    <i class="fas fa-tachometer-alt"></i>
                    <span>Real-time Metrics</span>
                </div>
                <div class="feature">
                    <i class="fas fa-chart-bar"></i>
                    <span>Usage Trends</span>
                </div>
                <div class="feature">
                    <i class="fas fa-exclamation-triangle"></i>
                    <span>Error Tracking</span>
                </div>
                <div class="feature">
                    <i class="fas fa-file-export"></i>
                    <span>Export Reports</span>
                </div>
            </div>
            <div class="cta-buttons">
                <a href="/contact?subject=partnership" class="btn btn-primary">Join Developer Program</a>
                <a href="/console/dashboard" class="btn btn-outline">Back to Console</a>
            </div>
        </div>
    </div>
</div>

<style>
    .console-page {
        min-height: 100vh;
        background: linear-gradient(135deg, #0f172a 0%, #1e1b4b 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
    }

    .coming-soon-card {
        background: #1e293b;
        border-radius: 24px;
        padding: 3rem;
        max-width: 600px;
        text-align: center;
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5);
        border: 1px solid #334155;
    }

    .icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
    }

    .icon i {
        font-size: 2rem;
        color: white;
    }

    h1 {
        font-size: 2rem;
        font-weight: 700;
        color: white;
        margin-bottom: 0.5rem;
    }

    .subtitle {
        color: #8b5cf6;
        font-weight: 600;
        margin-bottom: 1.5rem;
    }

    .description {
        color: #94a3b8;
        line-height: 1.7;
        margin-bottom: 2rem;
    }

    .features-preview {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .feature {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1rem;
        background: #334155;
        border-radius: 8px;
        font-size: 0.875rem;
        color: #e2e8f0;
    }

    .feature i {
        color: #8b5cf6;
    }

    .cta-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn {
        padding: 0.875rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s;
    }

    .btn-primary {
        background: #8b5cf6;
        color: white;
    }

    .btn-primary:hover {
        background: #7c3aed;
    }

    .btn-outline {
        border: 2px solid #475569;
        color: #e2e8f0;
        background: transparent;
    }

    .btn-outline:hover {
        border-color: #8b5cf6;
        color: #8b5cf6;
    }

    @@media (max-width: 576px) {
        .features-preview {
            grid-template-columns: 1fr;
        }
    }
</style>