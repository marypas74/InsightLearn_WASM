@page "/blog"
@page "/resources"
@page "/learn-hub"
@using InsightLearn.WebAssembly.Components.SEO

<SeoMetaTags
    Title="Learning Resources & Blog - Tutorials, Guides & Career Tips"
    Description="Free learning resources, programming tutorials, career guides, and expert tips. Master web development, Python, data science, and more with InsightLearn's educational blog."
    Keywords="programming tutorials, coding guides, web development tips, learn python, career advice, tech blog, e-learning resources, free courses, coding for beginners"
    PageType="website"
    Author="InsightLearn Team" />

<BreadcrumbSchema Items="@breadcrumbs" />

<div class="blog-page">
    <!-- Hero Section -->
    <section class="blog-hero">
        <div class="container">
            <h1>Learning Hub</h1>
            <p class="hero-subtitle">
                Free resources, tutorials, and expert guides to accelerate your learning journey
            </p>
            <div class="search-box">
                <input type="text" placeholder="Search tutorials, guides, tips..." @bind="searchQuery" @bind:event="oninput" />
                <button class="search-btn">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>
    </section>

    <!-- Categories Navigation -->
    <section class="blog-categories">
        <div class="container">
            <div class="category-tabs">
                <button class="@(selectedCategory == "all" ? "active" : "")" @onclick='() => SelectCategory("all")'>
                    All Topics
                </button>
                <button class="@(selectedCategory == "programming" ? "active" : "")" @onclick='() => SelectCategory("programming")'>
                    <i class="fas fa-code"></i> Programming
                </button>
                <button class="@(selectedCategory == "web-dev" ? "active" : "")" @onclick='() => SelectCategory("web-dev")'>
                    <i class="fas fa-globe"></i> Web Development
                </button>
                <button class="@(selectedCategory == "career" ? "active" : "")" @onclick='() => SelectCategory("career")'>
                    <i class="fas fa-briefcase"></i> Career
                </button>
                <button class="@(selectedCategory == "data-science" ? "active" : "")" @onclick='() => SelectCategory("data-science")'>
                    <i class="fas fa-chart-line"></i> Data Science
                </button>
            </div>
        </div>
    </section>

    <!-- Featured Articles -->
    <section class="featured-section">
        <div class="container">
            <h2>Featured Guides</h2>
            <div class="featured-grid">
                @foreach (var article in GetFilteredArticles().Take(3))
                {
                    <article class="featured-card">
                        <div class="card-image">
                            <img src="@article.ImageUrl" alt="@article.Title" loading="lazy" />
                            <span class="card-category">@article.Category</span>
                        </div>
                        <div class="card-content">
                            <h3>@article.Title</h3>
                            <p>@article.Excerpt</p>
                            <div class="card-meta">
                                <span><i class="fas fa-clock"></i> @article.ReadTime min read</span>
                                <span><i class="fas fa-calendar"></i> @article.Date</span>
                            </div>
                            <a href="@article.Url" class="read-more">
                                Read Guide <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    </article>
                }
            </div>
        </div>
    </section>

    <!-- All Articles Grid -->
    <section class="articles-section">
        <div class="container">
            <h2>All Resources</h2>
            <div class="articles-grid">
                @foreach (var article in GetFilteredArticles().Skip(3))
                {
                    <article class="article-card">
                        <div class="card-image-sm">
                            <img src="@article.ImageUrl" alt="@article.Title" loading="lazy" />
                        </div>
                        <div class="card-content">
                            <span class="article-category">@article.Category</span>
                            <h3>@article.Title</h3>
                            <p>@article.Excerpt</p>
                            <div class="card-footer">
                                <span class="read-time">@article.ReadTime min read</span>
                                <a href="@article.Url" class="read-link">Read <i class="fas fa-chevron-right"></i></a>
                            </div>
                        </div>
                    </article>
                }
            </div>
        </div>
    </section>

    <!-- Popular Topics -->
    <section class="topics-section">
        <div class="container">
            <h2>Popular Learning Paths</h2>
            <div class="topics-grid">
                <a href="/courses?skill=python" class="topic-card python">
                    <i class="fab fa-python"></i>
                    <h3>Python</h3>
                    <p>From basics to advanced - data science, automation, web development</p>
                    <span class="course-count">45+ courses</span>
                </a>
                <a href="/courses?skill=javascript" class="topic-card javascript">
                    <i class="fab fa-js-square"></i>
                    <h3>JavaScript</h3>
                    <p>Modern JS, React, Node.js, and full-stack development</p>
                    <span class="course-count">60+ courses</span>
                </a>
                <a href="/courses?skill=react" class="topic-card react">
                    <i class="fab fa-react"></i>
                    <h3>React</h3>
                    <p>Build modern web applications with React ecosystem</p>
                    <span class="course-count">35+ courses</span>
                </a>
                <a href="/courses?category=data-science" class="topic-card data">
                    <i class="fas fa-database"></i>
                    <h3>Data Science</h3>
                    <p>Machine learning, analytics, and data visualization</p>
                    <span class="course-count">50+ courses</span>
                </a>
            </div>
        </div>
    </section>

    <!-- Newsletter CTA -->
    <section class="newsletter-section">
        <div class="container">
            <div class="newsletter-content">
                <h2>Stay Updated</h2>
                <p>Get the latest tutorials, career tips, and learning resources delivered to your inbox</p>
                <div class="newsletter-form">
                    <input type="email" placeholder="Enter your email" />
                    <button class="btn btn-primary">Subscribe</button>
                </div>
                <p class="privacy-note">We respect your privacy. Unsubscribe at any time.</p>
            </div>
        </div>
    </section>
</div>

