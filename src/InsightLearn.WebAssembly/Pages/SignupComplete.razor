@page "/signup-complete"
@inject NavigationManager Navigation

<PageTitle>Welcome to InsightLearn!</PageTitle>

<div class="container-fluid vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="row justify-content-center w-100">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                    </div>

                    <h2 class="card-title mb-3 text-primary">Welcome to InsightLearn!</h2>

                    <p class="card-text text-muted mb-4">
                        @if (IsWelcomeFlow)
                        {
                            <span>ðŸŽ‰ Your account has been successfully created! You're now ready to start your learning journey.</span>
                        }
                        else
                        {
                            <span>Welcome back! You're successfully logged in.</span>
                        }
                    </p>

                    @if (IsWelcomeFlow)
                    {
                        <div class="alert alert-info mb-4">
                            <i class="fas fa-lightbulb me-2"></i>
                            <strong>Next Steps:</strong>
                            <ul class="list-unstyled mb-0 mt-2">
                                <li>â€¢ Explore our course catalog</li>
                                <li>â€¢ Complete your profile</li>
                                <li>â€¢ Start learning today!</li>
                            </ul>
                        </div>
                    }

                    <div class="d-grid gap-2">
                        <button type="button" class="btn btn-primary btn-lg" @onclick="GoToDashboard">
                            <i class="fas fa-tachometer-alt me-2"></i>
                            Go to Dashboard
                        </button>

                        @if (IsWelcomeFlow)
                        {
                            <button type="button" class="btn btn-outline-secondary" @onclick="ExploreCourses">
                                <i class="fas fa-search me-2"></i>
                                Explore Courses
                            </button>
                        }
                    </div>

                    <div class="mt-4 pt-3 border-top">
                        <p class="small text-muted mb-0">
                            <i class="fas fa-shield-alt me-1"></i>
                            Your account is secure and ready to use
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private bool IsWelcomeFlow { get; set; }

    protected override async Task OnInitializedAsync()
    {
        // Check if this is a welcome flow (new user signup)
        var uri = Navigation.ToAbsoluteUri(Navigation.Uri);
        IsWelcomeFlow = uri.Query.Contains("welcome=true");

        // Auto-redirect after 10 seconds if welcome flow
        if (IsWelcomeFlow)
        {
            _ = Task.Run(async () =>
            {
                await Task.Delay(10000);
                await InvokeAsync(() =>
                {
                    GoToDashboard();
                    StateHasChanged();
                });
            });
        }
    }

    private void GoToDashboard()
    {
        Navigation.NavigateTo("/dashboard", forceLoad: true);
    }

    private void ExploreCourses()
    {
        Navigation.NavigateTo("/courses", forceLoad: true);
    }
}
