    }

    private string GetInitials(string name)
    {
        if (string.IsNullOrEmpty(name)) return "?";
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        return parts.Length >= 2 ? $"{parts[0][0]}{parts[^1][0]}".ToUpper() : parts[0][0].ToString().ToUpper();
    }

    private string GetStatusClass(int progress) => progress switch
    {
        >= 100 => "completed",
        > 0 => "in-progress",
        _ => "not-started"
    };

    private string GetStatusText(int progress) => progress switch
    {
        >= 100 => "Completed",
        > 0 => "In Progress",
        _ => "Not Started"
    };

    private class StudentEnrollment
    {
        public string Name { get; set; } = "";
        public string Email { get; set; } = "";
        public string CourseName { get; set; } = "";
        public Guid CourseId { get; set; }
        public DateTime EnrolledDate { get; set; }
        public int Progress { get; set; }
    }

    private class CourseOption
    {
        public Guid Id { get; set; }
        public string Title { get; set; } = "";
    }
