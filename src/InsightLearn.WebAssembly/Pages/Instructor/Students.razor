@page "/instructor/students"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Instructor")]
@inject NavigationManager Navigation
@inject IApiClient ApiClient

<PageTitle>My Students - InsightLearn</PageTitle>

<div class="instructor-students-page">
    <div class="page-header">
        <div class="header-content">
            <nav class="breadcrumb-nav">
                <a href="/dashboard">Dashboard</a>
                <span class="separator">/</span>
                <span class="current">My Students</span>
            </nav>
            <h1><i class="fas fa-user-graduate"></i> My Students</h1>
            <p class="header-subtitle">View and manage students enrolled in your courses</p>
        </div>
    </div>

    <div class="stats-overview">
        <div class="stat-card">
            <div class="stat-icon blue"><i class="fas fa-users"></i></div>
            <div class="stat-info">
                <span class="stat-value">@totalStudents.ToString("N0")</span>
                <span class="stat-label">Total Students</span>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon green"><i class="fas fa-user-plus"></i></div>
            <div class="stat-info">
                <span class="stat-value">@newStudentsThisMonth</span>
                <span class="stat-label">New This Month</span>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon purple"><i class="fas fa-trophy"></i></div>
            <div class="stat-info">
                <span class="stat-value">@completedCount</span>
                <span class="stat-label">Completed Courses</span>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon orange"><i class="fas fa-percentage"></i></div>
            <div class="stat-info">
                <span class="stat-value">@avgProgress%</span>
                <span class="stat-label">Avg. Progress</span>
            </div>
        </div>
    </div>

    <div class="content-card">
        <div class="card-header">
            <h2>Enrolled Students</h2>
            <div class="filters">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="Search students..." @bind="searchQuery" @bind:event="oninput" />
                </div>
                <select class="course-filter" @bind="selectedCourse">
                    <option value="">All Courses</option>
                    @foreach (var course in courses)
                    {
                        <option value="@course.Id">@course.Title</option>
                    }
                </select>
            </div>
        </div>

        @if (isLoading)
        {
            <div class="loading-state">
                <div class="spinner"></div>
                <p>Loading students...</p>
            </div>
        }
        else if (filteredStudents.Any())
        {
            <div class="students-table">
                <table>
                    <thead>
                        <tr>
                            <th>Student</th>
                            <th>Course</th>
                            <th>Enrolled Date</th>
                            <th>Progress</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in filteredStudents)
                        {
                            <tr>
                                <td>
                                    <div class="student-info">
                                        <div class="avatar">@GetInitials(student.Name)</div>
                                        <div class="details">
                                            <span class="name">@student.Name</span>
                                            <span class="email">@student.Email</span>
                                        </div>
                                    </div>
                                </td>
                                <td>@student.CourseName</td>
                                <td>@student.EnrolledDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <div class="progress-cell">
                                        <div class="progress-bar">
                                            <div class="progress-fill" style="width: @student.Progress%"></div>
                                        </div>
                                        <span>@student.Progress%</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="status-badge @GetStatusClass(student.Progress)">
                                        @GetStatusText(student.Progress)
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-users-slash"></i>
                <h3>No students found</h3>
                <p>@(string.IsNullOrEmpty(searchQuery) ? "You don't have any enrolled students yet." : "No students match your search criteria.")</p>
            </div>
        }
    </div>
</div>

