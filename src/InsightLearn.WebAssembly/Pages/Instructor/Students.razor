@code {
    private bool isLoading = true;
    private string searchQuery = "";
    private string selectedCourse = "";

    private int totalStudents = 0;
    private int newStudentsThisMonth = 0;
    private int completedCount = 0;
    private int avgProgress = 0;

    private List<StudentEnrollment> students = new();
    private List<CourseOption> courses = new();

    private IEnumerable<StudentEnrollment> filteredStudents => students
        .Where(s => string.IsNullOrEmpty(searchQuery) ||
                    s.Name.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                    s.Email.Contains(searchQuery, StringComparison.OrdinalIgnoreCase))
        .Where(s => string.IsNullOrEmpty(selectedCourse) || s.CourseId.ToString() == selectedCourse);

    protected override async Task OnInitializedAsync()
    {
        await LoadStudents();
    }

    private async Task LoadStudents()
    {
        try
        {
            isLoading = true;

            // Try to load from API
            // For now, load mock data since API may not be ready
            await Task.Delay(500); // Simulate API call
            LoadMockData();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading students: {ex.Message}");
            LoadMockData();
        }
        finally
        {
            isLoading = false;
        }
    }

    private void LoadMockData()
