@page "/instructor/courses"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Instructor")]

<PageTitle>My Courses - InsightLearn</PageTitle>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>My Courses</h1>
        <a href="/instructor/courses/create" class="btn btn-primary">
            <i class="bi bi-plus"></i> Create Course
        </a>
    </div>

    <div class="empty-state">
        <i class="bi bi-book"></i>
        <h3>No courses yet</h3>
        <p>Create your first course to start teaching</p>
        <a href="/instructor/courses/create" class="btn btn-primary">Create Course</a>
    </div>
</div>
