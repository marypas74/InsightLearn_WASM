@page "/profile"
@using InsightLearn.WebAssembly.Models.Auth
@using InsightLearn.WebAssembly.Services
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using System.ComponentModel.DataAnnotations
@attribute [Authorize]
@inject IUserService UserService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation

<PageTitle>My Profile - InsightLearn</PageTitle>

<div class="container py-5">
    <div class="row">
        <!-- Left Column: Profile Card (30%) -->
        <div class="col-lg-4 mb-4">
            <div class="card profile-card">
                <!-- Avatar -->
                <div class="profile-avatar-wrapper">
                    @if (!string.IsNullOrEmpty(user?.ProfileImageUrl))
                    {
                        <img src="@user.ProfileImageUrl" alt="@user.FirstName" class="profile-avatar" />
                    }
                    else
                    {
                        <div class="profile-avatar-placeholder">
                            <i class="bi bi-person"></i>
                        </div>
                    }

                    @if (isEditMode)
                    {
                        <label class="avatar-upload-btn" title="Upload profile picture">
                            <i class="bi bi-camera"></i>
                            <InputFile OnChange="HandleAvatarUploadAsync" accept="image/*" class="d-none" />
                        </label>
                    }
                </div>

                <div class="profile-info">
                    <h2 class="profile-name">@user?.FullName</h2>
                    <p class="profile-email">@user?.Email</p>
                    <span class="badge badge-@(GetRoleBadgeColor(user?.Role))">
                        @user?.Role
                    </span>
                </div>

                <!-- Stats -->
                <div class="profile-stats">
                    <div class="stat-item">
                        <span class="stat-value">@enrolledCourseCount</span>
                        <span class="stat-label">Enrolled Courses</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-value">@completedCourseCount</span>
                        <span class="stat-label">Completed</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-value">@averageProgress%</span>
                        <span class="stat-label">Avg Progress</span>
                    </div>
                </div>

                <!-- Actions -->
                <div class="profile-actions">
                    @if (!isEditMode)
                    {
                        <button @onclick="EnableEditMode" class="btn btn-primary w-100">
                            <i class="bi bi-pencil"></i> Edit Profile
                        </button>
                    }
                    else
                    {
                        <button @onclick="CancelEditMode" class="btn btn-outline w-100 mb-2">
                            <i class="bi bi-x"></i> Cancel
                        </button>
                    }
                </div>
            </div>
        </div>

        <!-- Right Column: Edit Form (70%) -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h3>Personal Information</h3>
                </div>
                <div class="card-body">
                    @if (isLoading)
                    {
                        <!-- Skeleton loaders for form -->
                        <div class="skeleton skeleton-input mb-3"></div>
                        <div class="skeleton skeleton-input mb-3"></div>
                        <div class="skeleton skeleton-textarea"></div>
                    }
                    else if (user != null)
                    {
                        <EditForm Model="editModel" OnValidSubmit="HandleSaveAsync">
                            <DataAnnotationsValidator />

                            <div class="row">
                                <!-- First Name -->
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">First Name</label>
                                    <InputText @bind-Value="editModel.FirstName"
                                               class="form-control"
                                               disabled="@(!isEditMode)" />
                                    <ValidationMessage For="@(() => editModel.FirstName)" />
                                </div>

                                <!-- Last Name -->
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Last Name</label>
                                    <InputText @bind-Value="editModel.LastName"
                                               class="form-control"
                                               disabled="@(!isEditMode)" />
                                    <ValidationMessage For="@(() => editModel.LastName)" />
                                </div>
                            </div>

                            <!-- Email (readonly) -->
                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                <input type="email"
                                       value="@user.Email"
                                       class="form-control"
                                       disabled
                                       readonly />
                                <small class="form-text text-muted">
                                    Email cannot be changed. Contact support if needed.
                                </small>
                            </div>

                            <!-- Bio -->
                            <div class="mb-3">
                                <label class="form-label">Bio</label>
                                <InputTextArea @bind-Value="editModel.Bio"
                                               class="form-control"
                                               rows="4"
                                               disabled="@(!isEditMode)"
                                               placeholder="Tell us about yourself..." />
                                <ValidationMessage For="@(() => editModel.Bio)" />
                                <small class="form-text text-muted">
                                    @(editModel.Bio?.Length ?? 0) / 500 characters
                                </small>
                            </div>

                            <!-- Save Button (only in edit mode) -->
                            @if (isEditMode)
                            {
                                <div class="d-flex justify-content-end gap-2">
                                    <button type="button"
                                            @onclick="CancelEditMode"
                                            class="btn btn-outline"
                                            disabled="@isSaving">
                                        Cancel
                                    </button>
                                    <button type="submit"
                                            class="btn btn-primary"
                                            disabled="@isSaving">
                                        @if (isSaving)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                            <text>Saving...</text>
                                        }
                                        else
                                        {
                                            <i class="bi bi-check"></i>
                                            <text> Save Changes</text>
                                        }
                                    </button>
                                </div>
                            }
                        </EditForm>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private UserInfo? user;
    private UpdateUserModel editModel = new();
    private bool isLoading = true;
    private bool isEditMode = false;
    private bool isSaving = false;

    private int enrolledCourseCount = 0;
    private int completedCourseCount = 0;
    private int averageProgress = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadUserDataAsync();
    }

    private async Task LoadUserDataAsync()
    {
        isLoading = true;
        try
        {
            var response = await UserService.GetUserProfileAsync();

            if (response.Success && response.Data != null)
            {
                user = response.Data;

                // TODO: Load stats from enrollment service
                // For now using mock data
                enrolledCourseCount = 5;
                completedCourseCount = 2;
                averageProgress = 65;

                // Initialize edit model
                editModel = new UpdateUserModel
                {
                    FirstName = user.FirstName,
                    LastName = user.LastName,
                    Bio = user.Bio
                };
            }
            else
            {
                Console.WriteLine($"Error loading profile: {response.Message}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading profile: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void EnableEditMode()
    {
        isEditMode = true;
    }

    private void CancelEditMode()
    {
        isEditMode = false;
        // Reset form to original values
        if (user != null)
        {
            editModel = new UpdateUserModel
            {
                FirstName = user.FirstName,
                LastName = user.LastName,
                Bio = user.Bio
            };
        }
    }

    private async Task HandleSaveAsync()
    {
        isSaving = true;
        try
        {
            // Create updated user info
            var updatedUser = new UserInfo
            {
                Id = user!.Id,
                Email = user.Email,
                FirstName = editModel.FirstName,
                LastName = editModel.LastName,
                FullName = $"{editModel.FirstName} {editModel.LastName}",
                Bio = editModel.Bio,
                ProfileImageUrl = user.ProfileImageUrl,
                Roles = user.Roles,
                DateJoined = user.DateJoined,
                LastLoginDate = user.LastLoginDate,
                IsInstructor = user.IsInstructor,
                IsVerified = user.IsVerified,
                WalletBalance = user.WalletBalance,
                LockoutEnd = user.LockoutEnd,
                SessionId = user.SessionId
            };

            var response = await UserService.UpdateUserProfileAsync(updatedUser);

            if (response.Success)
            {
                // Update local user object
                user = response.Data;
                Console.WriteLine("Profile updated successfully!");
                isEditMode = false;
            }
            else
            {
                Console.WriteLine($"Error saving profile: {response.Message}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving profile: {ex.Message}");
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task HandleAvatarUploadAsync(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file.Size > 5 * 1024 * 1024) // 5MB limit
        {
            Console.WriteLine("File size must be less than 5MB");
            return;
        }

        try
        {
            using var stream = file.OpenReadStream(maxAllowedSize: 5 * 1024 * 1024);
            var response = await UserService.UploadProfileImageAsync(stream, file.Name);

            if (response.Success)
            {
                Console.WriteLine("Avatar uploaded successfully!");
                await LoadUserDataAsync(); // Reload to get new avatar URL
            }
            else
            {
                Console.WriteLine($"Error uploading avatar: {response.Message}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error uploading avatar: {ex.Message}");
        }
    }

    private string GetRoleBadgeColor(string? role) =>
        role?.ToLower() switch
        {
            "admin" => "danger",
            "instructor" => "primary",
            "student" => "success",
            _ => "secondary"
        };

    public class UpdateUserModel
    {
        [Required, StringLength(50)]
        public string FirstName { get; set; } = string.Empty;

        [Required, StringLength(50)]
        public string LastName { get; set; } = string.Empty;

        [StringLength(500)]
        public string? Bio { get; set; }
    }
}
