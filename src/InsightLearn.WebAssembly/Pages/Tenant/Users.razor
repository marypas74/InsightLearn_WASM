@page "/tenant/users"
@using InsightLearn.WebAssembly.Components.SEO

<SeoMetaTags
    Title="User Management - InsightLearn for Business"
    Description="Manage your organization's users, assign roles, and track learning progress across your team with InsightLearn's enterprise user management."
    Keywords="user management, team management, enterprise users, corporate LMS"
    PageType="WebPage" />

<PageTitle>User Management - InsightLearn</PageTitle>

<div class="tenant-page">
    <div class="container">
        <div class="coming-soon-card">
            <div class="icon">
                <i class="fas fa-users-cog"></i>
            </div>
            <h1>User Management</h1>
            <p class="subtitle">Team Administration</p>
            <p class="description">
                Enterprise user management is coming soon. Invite team members, assign roles,
                create learning groups, and track progress across your organization.
            </p>
            <div class="features-preview">
                <div class="feature">
                    <i class="fas fa-user-plus"></i>
                    <span>Bulk User Import</span>
                </div>
                <div class="feature">
                    <i class="fas fa-user-shield"></i>
                    <span>Role-Based Access</span>
                </div>
                <div class="feature">
                    <i class="fas fa-layer-group"></i>
                    <span>Learning Groups</span>
                </div>
                <div class="feature">
                    <i class="fas fa-key"></i>
                    <span>SSO Integration</span>
                </div>
            </div>
            <div class="cta-buttons">
                <a href="/contact?subject=architecture" class="btn btn-primary">Contact Sales</a>
                <a href="/tenant/overview" class="btn btn-outline">Back to Dashboard</a>
            </div>
        </div>
    </div>
</div>

<style>
    .tenant-page {
        min-height: 100vh;
        background: linear-gradient(135deg, #1e3a5f 0%, #0f172a 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
    }

    .coming-soon-card {
        background: white;
        border-radius: 24px;
        padding: 3rem;
        max-width: 600px;
        text-align: center;
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.25);
    }

    .icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
    }

    .icon i {
        font-size: 2rem;
        color: white;
    }

    h1 {
        font-size: 2rem;
        font-weight: 700;
        color: #1c1d1f;
        margin-bottom: 0.5rem;
    }

    .subtitle {
        color: #10b981;
        font-weight: 600;
        margin-bottom: 1.5rem;
    }

    .description {
        color: #6b7280;
        line-height: 1.7;
        margin-bottom: 2rem;
    }

    .features-preview {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .feature {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1rem;
        background: #f3f4f6;
        border-radius: 8px;
        font-size: 0.875rem;
        color: #374151;
    }

    .feature i {
        color: #10b981;
    }

    .cta-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn {
        padding: 0.875rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s;
    }

    .btn-primary {
        background: #10b981;
        color: white;
    }

    .btn-primary:hover {
        background: #059669;
    }

    .btn-outline {
        border: 2px solid #e5e7eb;
        color: #374151;
        background: transparent;
    }

    .btn-outline:hover {
        border-color: #10b981;
        color: #10b981;
    }

    @@media (max-width: 576px) {
        .features-preview {
            grid-template-columns: 1fr;
        }
    }
</style>