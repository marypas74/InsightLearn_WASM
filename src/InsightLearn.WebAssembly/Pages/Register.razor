@page "/register"
@inject IAuthService AuthService
@inject IToastService ToastService
@inject NavigationManager Navigation

<PageTitle>Sign Up - InsightLearn</PageTitle>

<div class="auth-container">
    @* Left Side - Form Content *@
    <div class="auth-content">
        <div class="auth-header">
            <a href="/" class="auth-logo">
                <i class="fas fa-graduation-cap" style="font-size: 28px; color: var(--primary); margin-right: 8px;"></i>
                <span>InsightLearn</span>
            </a>
        </div>

        <div class="auth-main">
            <div class="auth-card">
                <div class="auth-card-header">
                    <h1>Create Your Account</h1>
                    <p class="auth-subtitle">Join thousands of learners and start your journey today</p>
                </div>

                <div class="auth-card-body">
                    @* Enterprise SSO Button (Microsoft Entra ID / Azure AD) *@
                    <button @onclick="RegisterWithSSO" class="sso-signin-btn" disabled="@isLoading" type="button" aria-label="Sign up with your organization">
                        @if (isSsoLoading)
                        {
                            <div class="sso-spinner"></div>
                            <span>Connecting to your organization...</span>
                        }
                        else
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 23 23" class="microsoft-icon" role="img" aria-hidden="true" width="20" height="20">
                                <rect x="1" y="1" width="10" height="10" fill="#f25022"/>
                                <rect x="12" y="1" width="10" height="10" fill="#00a4ef"/>
                                <rect x="1" y="12" width="10" height="10" fill="#7fba00"/>
                                <rect x="12" y="12" width="10" height="10" fill="#ffb900"/>
                            </svg>
                            <span>Sign up with Organization (SSO)</span>
                        }
                    </button>

                    <div class="auth-divider">
                        <span>or sign up with email</span>
                    </div>

                    <EditForm Model="@registerRequest" OnValidSubmit="HandleRegister" class="auth-form">
                        <DataAnnotationsValidator />

                        @* Name Row *@
                        <div class="form-row">
                            <div class="form-group">
                                <label class="form-label" for="firstName">
                                    <i class="fas fa-user" style="margin-right: 6px; color: var(--gray-500);"></i>
                                    First Name
                                </label>
                                <InputText id="firstName" class="form-input" @bind-Value="registerRequest.FirstName"
                                           placeholder="John" />
                                <ValidationMessage For="@(() => registerRequest.FirstName)" class="field-validation-error" />
                            </div>
                            <div class="form-group">
                                <label class="form-label" for="lastName">
                                    <i class="fas fa-user" style="margin-right: 6px; color: var(--gray-500);"></i>
                                    Last Name
                                </label>
                                <InputText id="lastName" class="form-input" @bind-Value="registerRequest.LastName"
                                           placeholder="Doe" />
                                <ValidationMessage For="@(() => registerRequest.LastName)" class="field-validation-error" />
                            </div>
                        </div>

                        @* Email *@
                        <div class="form-group">
                            <label class="form-label" for="email">
                                <i class="fas fa-envelope" style="margin-right: 6px; color: var(--gray-500);"></i>
                                Email Address
                            </label>
                            <InputText id="email" type="email" class="form-input" @bind-Value="registerRequest.Email"
                                       placeholder="you@example.com" />
                            <ValidationMessage For="@(() => registerRequest.Email)" class="field-validation-error" />
                        </div>

                        @* Password with Strength Indicator *@
                        <div class="form-group">
                            <label class="form-label" for="password">
                                <i class="fas fa-lock" style="margin-right: 6px; color: var(--gray-500);"></i>
                                Password
                            </label>
                            <div class="password-input-container">
                                <InputText id="password" type="@(showPassword ? "text" : "password")"
                                           class="form-input" @bind-Value="registerRequest.Password"
                                           placeholder="Min. 8 characters"
                                           @oninput="OnPasswordInput" />
                                <button type="button" class="password-toggle-btn" @onclick="TogglePasswordVisibility"
                                        aria-label="@(showPassword ? "Hide password" : "Show password")">
                                    <i class="fas @(showPassword ? "fa-eye-slash" : "fa-eye")"></i>
                                </button>
                            </div>
                            <ValidationMessage For="@(() => registerRequest.Password)" class="field-validation-error" />

                            @* Password Strength Indicator *@
                            @if (!string.IsNullOrEmpty(registerRequest.Password))
                            {
                                <div class="password-strength">
                                    <div class="strength-bars">
                                        <div class="strength-bar @(passwordStrength >= 1 ? "active" : "") @GetStrengthClass()"></div>
                                        <div class="strength-bar @(passwordStrength >= 2 ? "active" : "") @GetStrengthClass()"></div>
                                        <div class="strength-bar @(passwordStrength >= 3 ? "active" : "") @GetStrengthClass()"></div>
                                        <div class="strength-bar @(passwordStrength >= 4 ? "active" : "") @GetStrengthClass()"></div>
                                    </div>
                                    <span class="strength-text @GetStrengthClass()">@GetStrengthText()</span>
                                </div>
                            }
                        </div>

                        @* Confirm Password *@
                        <div class="form-group">
                            <label class="form-label" for="confirmPassword">
                                <i class="fas fa-lock" style="margin-right: 6px; color: var(--gray-500);"></i>
                                Confirm Password
                            </label>
                            <div class="password-input-container">
                                <InputText id="confirmPassword" type="@(showConfirmPassword ? "text" : "password")"
                                           class="form-input" @bind-Value="registerRequest.ConfirmPassword"
                                           placeholder="Re-enter your password" />
                                <button type="button" class="password-toggle-btn" @onclick="ToggleConfirmPasswordVisibility"
                                        aria-label="@(showConfirmPassword ? "Hide password" : "Show password")">
                                    <i class="fas @(showConfirmPassword ? "fa-eye-slash" : "fa-eye")"></i>
                                </button>
                            </div>
                            <ValidationMessage For="@(() => registerRequest.ConfirmPassword)" class="field-validation-error" />
                            @if (!string.IsNullOrEmpty(registerRequest.ConfirmPassword) && registerRequest.Password == registerRequest.ConfirmPassword)
                            {
                                <div class="password-match">
                                    <i class="fas fa-check-circle" style="color: var(--success);"></i>
                                    <span style="color: var(--success); font-size: 12px;">Passwords match</span>
                                </div>
                            }
                        </div>

                        @* Role Selection *@
                        <div class="form-group">
                            <label class="form-label" for="role">
                                <i class="fas fa-user-tag" style="margin-right: 6px; color: var(--gray-500);"></i>
                                I want to
                            </label>
                            <div class="role-selector">
                                <label class="role-option @(registerRequest.Role == "Student" ? "selected" : "")" for="roleStudent">
                                    <input type="radio" id="roleStudent" name="role" value="Student"
                                           checked="@(registerRequest.Role == "Student")"
                                           @onchange="@(() => registerRequest.Role = "Student")" />
                                    <div class="role-content">
                                        <i class="fas fa-book-reader"></i>
                                        <span class="role-title">Learn</span>
                                        <span class="role-desc">Access courses</span>
                                    </div>
                                </label>
                                <label class="role-option @(registerRequest.Role == "Instructor" ? "selected" : "")" for="roleInstructor">
                                    <input type="radio" id="roleInstructor" name="role" value="Instructor"
                                           checked="@(registerRequest.Role == "Instructor")"
                                           @onchange="@(() => registerRequest.Role = "Instructor")" />
                                    <div class="role-content">
                                        <i class="fas fa-chalkboard-teacher"></i>
                                        <span class="role-title">Teach</span>
                                        <span class="role-desc">Create courses</span>
                                    </div>
                                </label>
                            </div>
                        </div>

                        @* Terms & Conditions *@
                        <div class="form-check-container">
                            <label class="form-check-label" for="agreeTerms">
                                <input type="checkbox" class="form-check-input" id="agreeTerms" @bind="agreeTerms" />
                                <span class="checkmark"></span>
                                <span class="terms-text">
                                    I agree to the <a href="/terms" class="auth-link">Terms of Service</a>
                                    and <a href="/privacy" class="auth-link">Privacy Policy</a>
                                </span>
                            </label>
                        </div>

                        @* Submit Button *@
                        <button type="submit" class="auth-submit-btn @(isLoading ? "loading" : "")"
                                disabled="@(isLoading || !agreeTerms)">
                            @if (isLoading)
                            {
                                <div class="spinner"></div>
                                <span>Creating your account...</span>
                            }
                            else
                            {
                                <i class="fas fa-rocket" style="margin-right: 8px;"></i>
                                <span>Create Account</span>
                            }
                        </button>

                        @* Error Message *@
                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="error-message" role="alert">
                                <i class="fas fa-exclamation-circle"></i>
                                <span class="error-text">@errorMessage</span>
                            </div>
                        }
                    </EditForm>

                    <div class="auth-signup">
                        <p>Already have an account? <a href="/login" class="auth-link-primary">Sign in</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* Right Side - Visual Content *@
    <div class="auth-visual">
        <div class="visual-content">
            <div class="visual-illustration">
                <div class="floating-elements">
                    <div class="floating-element element-1">
                        <i class="fas fa-graduation-cap"></i>
                    </div>
                    <div class="floating-element element-2">
                        <i class="fas fa-certificate"></i>
                    </div>
                    <div class="floating-element element-3">
                        <i class="fas fa-rocket"></i>
                    </div>
                </div>
            </div>

            <div class="visual-text">
                <h2>Start Your Learning Journey</h2>
                <p>Join our community of learners and unlock your potential with world-class courses and expert instructors.</p>
            </div>

            <div class="visual-stats">
                <div class="stat">
                    <span class="stat-number">10K+</span>
                    <span class="stat-label">Students</span>
                </div>
                <div class="stat">
                    <span class="stat-number">500+</span>
                    <span class="stat-label">Courses</span>
                </div>
                <div class="stat">
                    <span class="stat-number">95%</span>
                    <span class="stat-label">Satisfaction</span>
                </div>
            </div>

            <div class="visual-features">
                <div class="feature-item">
                    <i class="fas fa-check-circle"></i>
                    <span>Lifetime access to courses</span>
                </div>
                <div class="feature-item">
                    <i class="fas fa-check-circle"></i>
                    <span>Certificate on completion</span>
                </div>
                <div class="feature-item">
                    <i class="fas fa-check-circle"></i>
                    <span>Learn at your own pace</span>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Register Page Specific Styles */
    .auth-subtitle {
        color: var(--gray-500);
        font-size: 0.95rem;
        margin-top: var(--space-2);
    }

    /* Form Row for Name Fields */
    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: var(--space-4);
    }

    /* Password Strength Indicator */
    .password-strength {
        display: flex;
        align-items: center;
        gap: var(--space-3);
        margin-top: var(--space-2);
    }

    .strength-bars {
        display: flex;
        gap: 4px;
        flex: 1;
    }

    .strength-bar {
        height: 4px;
        flex: 1;
        background: var(--gray-200);
        border-radius: 2px;
        transition: all 0.3s ease;
    }

    .strength-bar.active.weak {
        background: #ef4444;
    }

    .strength-bar.active.fair {
        background: #f59e0b;
    }

    .strength-bar.active.good {
        background: #3b82f6;
    }

    .strength-bar.active.strong {
        background: #10b981;
    }

    .strength-text {
        font-size: 11px;
        font-weight: 600;
        min-width: 50px;
        text-align: right;
    }

    .strength-text.weak { color: #ef4444; }
    .strength-text.fair { color: #f59e0b; }
    .strength-text.good { color: #3b82f6; }
    .strength-text.strong { color: #10b981; }

    /* Password Match Indicator */
    .password-match {
        display: flex;
        align-items: center;
        gap: var(--space-1);
        margin-top: var(--space-1);
    }

    /* Role Selector */
    .role-selector {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: var(--space-3);
    }

    .role-option {
        position: relative;
        cursor: pointer;
    }

    .role-option input[type="radio"] {
        position: absolute;
        opacity: 0;
        width: 0;
        height: 0;
    }

    .role-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: var(--space-2);
        padding: var(--space-4);
        background: var(--gray-50);
        border: 2px solid var(--gray-200);
        border-radius: var(--border-radius-lg);
        transition: all 0.3s ease;
    }

    .role-option:hover .role-content {
        border-color: var(--primary);
        background: rgba(164, 53, 240, 0.05);
    }

    .role-option.selected .role-content {
        border-color: var(--primary);
        background: rgba(164, 53, 240, 0.1);
        box-shadow: 0 0 0 3px rgba(164, 53, 240, 0.15);
    }

    .role-content i {
        font-size: 1.5rem;
        color: var(--gray-500);
        transition: color 0.3s ease;
    }

    .role-option.selected .role-content i {
        color: var(--primary);
    }

    .role-title {
        font-weight: 600;
        color: var(--gray-900);
        font-size: 0.95rem;
    }

    .role-desc {
        font-size: 0.75rem;
        color: var(--gray-500);
    }

    /* Terms Text */
    .terms-text {
        font-size: 0.875rem;
        color: var(--gray-600);
        line-height: 1.5;
    }

    .terms-text a {
        color: var(--primary);
        text-decoration: none;
        font-weight: 500;
    }

    .terms-text a:hover {
        text-decoration: underline;
    }

    /* Visual Features */
    .visual-features {
        margin-top: var(--space-8);
        display: flex;
        flex-direction: column;
        gap: var(--space-3);
    }

    .feature-item {
        display: flex;
        align-items: center;
        gap: var(--space-3);
        font-size: 0.95rem;
        opacity: 0.9;
    }

    .feature-item i {
        color: rgba(255, 255, 255, 0.9);
        font-size: 1.1rem;
    }

    /* Mobile Responsive */
    @@media (max-width: 768px) {
        .form-row {
            grid-template-columns: 1fr;
            gap: var(--space-3);
        }

        .role-selector {
            grid-template-columns: 1fr 1fr;
            gap: var(--space-2);
        }

        .role-content {
            padding: var(--space-3);
        }

        .role-content i {
            font-size: 1.25rem;
        }

        .role-title {
            font-size: 0.85rem;
        }

        .role-desc {
            display: none;
        }

        .visual-features {
            display: none;
        }
    }

    @@media (max-width: 480px) {
        .strength-text {
            display: none;
        }

        .password-strength {
            margin-top: var(--space-1);
        }
    }
</style>

@code {
    private RegisterRequest registerRequest = new() { Role = "Student" };
    private string? errorMessage;
    private bool isLoading = false;
    private bool isSsoLoading = false;
    private bool showPassword = false;
    private bool showConfirmPassword = false;
    private bool agreeTerms = false;
    private int passwordStrength = 0;

    private void TogglePasswordVisibility()
    {
        showPassword = !showPassword;
    }

    private void ToggleConfirmPasswordVisibility()
    {
        showConfirmPassword = !showConfirmPassword;
    }

    private void OnPasswordInput(ChangeEventArgs e)
    {
        var password = e.Value?.ToString() ?? "";
        CalculatePasswordStrength(password);
    }

    private void CalculatePasswordStrength(string password)
    {
        passwordStrength = 0;

        if (string.IsNullOrEmpty(password))
        {
            return;
        }

        // Length check
        if (password.Length >= 8) passwordStrength++;
        if (password.Length >= 12) passwordStrength++;

        // Character variety
        if (System.Text.RegularExpressions.Regex.IsMatch(password, "[a-z]") &&
            System.Text.RegularExpressions.Regex.IsMatch(password, "[A-Z]"))
            passwordStrength++;

        if (System.Text.RegularExpressions.Regex.IsMatch(password, @"[\d]"))
            passwordStrength++;

        if (System.Text.RegularExpressions.Regex.IsMatch(password, @"[!@#$%^&*(),.?""':{}|<>]"))
            passwordStrength++;

        // Cap at 4
        passwordStrength = Math.Min(passwordStrength, 4);
    }

    private string GetStrengthClass()
    {
        return passwordStrength switch
        {
            1 => "weak",
            2 => "fair",
            3 => "good",
            4 => "strong",
            _ => ""
        };
    }

    private string GetStrengthText()
    {
        return passwordStrength switch
        {
            1 => "Weak",
            2 => "Fair",
            3 => "Good",
            4 => "Strong",
            _ => ""
        };
    }

    private async Task HandleRegister()
    {
        if (!agreeTerms)
        {
            errorMessage = "Please accept the Terms of Service and Privacy Policy";
            return;
        }

        isLoading = true;
        errorMessage = null;

        try
        {
            var response = await AuthService.RegisterAsync(registerRequest);

            if (response.Success)
            {
                ToastService.ShowSuccess("Account created successfully! Welcome to InsightLearn!");
                Navigation.NavigateTo("/complete-registration");
            }
            else
            {
                errorMessage = response.Message ?? "Registration failed";
                if (response.Errors.Any())
                {
                    errorMessage += ": " + string.Join(", ", response.Errors);
                }
                ToastService.ShowError(errorMessage);
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
            ToastService.ShowError(errorMessage);
        }
        finally
        {
            isLoading = false;
        }
    }

    private void RegisterWithSSO()
    {
        isSsoLoading = true;
        // Redirect to backend SSO endpoint (Microsoft Entra ID / Azure AD)
        Navigation.NavigateTo("/api/auth/sso-login?returnUrl=/complete-registration", true);
    }
}
