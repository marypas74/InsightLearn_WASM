@page "/contact"
@page "/contact-us"
@page "/support-contact"
@using InsightLearn.WebAssembly.Components.SEO

<SeoMetaTags
    Title="Contact Sales - Enterprise Infrastructure | InsightLearn"
    Description="Contact InsightLearn for enterprise learning infrastructure solutions. Request architecture reviews, get pricing for dedicated deployments, or speak with our Solutions Architects."
    Keywords="contact InsightLearn, enterprise sales, infrastructure pricing, dedicated cloud, solutions architect, architecture review, enterprise support"
    PageType="ContactPage"
    Author="InsightLearn Infrastructure Team" />

<BreadcrumbSchema Items="@breadcrumbs" />

<div class="contact-page">
    <!-- Hero Section -->
    <section class="contact-hero">
        <div class="container">
            <h1>Contact Our Solutions Team</h1>
            <p class="hero-subtitle">
                Speak with our Solutions Architects about your dedicated infrastructure requirements.
            </p>
        </div>
    </section>

    <!-- Contact Methods -->
    <section class="contact-methods">
        <div class="container">
            <div class="methods-grid">
                <div class="method-card">
                    <div class="method-icon">
                        <i class="fas fa-briefcase"></i>
                    </div>
                    <h3>Enterprise Sales</h3>
                    <p>For new infrastructure deployments</p>
                    <a href="mailto:sales@insightlearn.cloud" class="method-link">
                        sales@insightlearn.cloud
                    </a>
                </div>
                <div class="method-card">
                    <div class="method-icon">
                        <i class="fas fa-drafting-compass"></i>
                    </div>
                    <h3>Architecture Review</h3>
                    <p>Get a custom deployment design</p>
                    <button class="btn btn-primary" onclick="openChatWidget()">
                        Schedule Call
                    </button>
                </div>
                <div class="method-card">
                    <div class="method-icon">
                        <i class="fas fa-headset"></i>
                    </div>
                    <h3>Technical Support</h3>
                    <p>24/7 NOC for existing customers</p>
                    <a href="mailto:support@insightlearn.cloud" class="method-link">
                        support@insightlearn.cloud
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Form -->
    <section class="contact-form-section">
        <div class="container">
            <div class="form-grid">
                <div class="form-content">
                    <h2>Request an Architecture Review</h2>
                    <p>Tell us about your requirements and a Solutions Architect will contact you within 24 hours.</p>

                    <EditForm Model="@contactModel" OnValidSubmit="HandleSubmit" class="contact-form">
                        <DataAnnotationsValidator />

                        <div class="form-row">
                            <div class="form-group">
                                <label for="firstName">First Name *</label>
                                <InputText id="firstName" @bind-Value="contactModel.FirstName" class="form-control" />
                                <ValidationMessage For="@(() => contactModel.FirstName)" />
                            </div>
                            <div class="form-group">
                                <label for="lastName">Last Name *</label>
                                <InputText id="lastName" @bind-Value="contactModel.LastName" class="form-control" />
                                <ValidationMessage For="@(() => contactModel.LastName)" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="email">Email Address *</label>
                            <InputText id="email" @bind-Value="contactModel.Email" type="email" class="form-control" />
                            <ValidationMessage For="@(() => contactModel.Email)" />
                        </div>

                        <div class="form-group">
                            <label for="subject">Inquiry Type *</label>
                            <InputSelect id="subject" @bind-Value="contactModel.Subject" class="form-control">
                                <option value="">Select inquiry type...</option>
                                <option value="architecture">Architecture Review</option>
                                <option value="pricing">Custom Pricing</option>
                                <option value="poc">Proof of Concept</option>
                                <option value="compliance">Compliance Requirements</option>
                                <option value="migration">Platform Migration</option>
                                <option value="support">Technical Support</option>
                                <option value="partnership">Partnership / Reseller</option>
                                <option value="other">Other</option>
                            </InputSelect>
                            <ValidationMessage For="@(() => contactModel.Subject)" />
                        </div>

                        <div class="form-group">
                            <label for="message">Message *</label>
                            <InputTextArea id="message" @bind-Value="contactModel.Message" class="form-control" rows="5" />
                            <ValidationMessage For="@(() => contactModel.Message)" />
                        </div>

                        <button type="submit" class="btn btn-primary btn-block" disabled="@isSubmitting">
                            @if (isSubmitting)
                            {
                                <span class="spinner"></span>
                                <span>Sending...</span>
                            }
                            else
                            {
                                <i class="fas fa-paper-plane"></i>
                                <span>Send Message</span>
                            }
                        </button>

                        @if (showSuccess)
                        {
                            <div class="alert alert-success">
                                <i class="fas fa-check-circle"></i>
                                Thank you for your inquiry! A Solutions Architect will contact you within 24 hours.
                            </div>
                        }
                    </EditForm>
                </div>

                <div class="contact-info">
                    <div class="info-card">
                        <h3>Contact Information</h3>
                        <div class="info-item">
                            <i class="fas fa-briefcase"></i>
                            <div>
                                <strong>Enterprise Sales</strong>
                                <p>sales@insightlearn.cloud</p>
                            </div>
                        </div>
                        <div class="info-item">
                            <i class="fas fa-headset"></i>
                            <div>
                                <strong>Technical Support</strong>
                                <p>24/7 NOC available for customers</p>
                            </div>
                        </div>
                        <div class="info-item">
                            <i class="fas fa-globe"></i>
                            <div>
                                <strong>Global Coverage</strong>
                                <p>25+ Data Center Regions</p>
                            </div>
                        </div>
                    </div>

                    <div class="info-card">
                        <h3>Resources</h3>
                        <ul class="quick-links">
                            <li><a href="/faq"><i class="fas fa-question-circle"></i> Infrastructure FAQ</a></li>
                            <li><a href="/about"><i class="fas fa-info-circle"></i> About InsightLearn</a></li>
                            <li><a href="/solutions/infrastructure"><i class="fas fa-server"></i> View Configurations</a></li>
                            <li><a href="/pricing"><i class="fas fa-tags"></i> Pricing & SLAs</a></li>
                            <li><a href="/security"><i class="fas fa-shield-alt"></i> Security & Compliance</a></li>
                            <li><a href="/privacy-policy"><i class="fas fa-lock"></i> Privacy Policy</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<!-- ContactPage Schema JSON-LD -->
<HeadContent>
    <script type="application/ld+json">
    {
        "@@context": "https://schema.org",
        "@@type": "ContactPage",
        "name": "Contact InsightLearn Infrastructure",
        "description": "Contact InsightLearn for enterprise learning infrastructure solutions, architecture reviews, and dedicated cloud deployments",
        "url": "https://www.insightlearn.cloud/contact",
        "mainEntity": {
            "@@type": "Organization",
            "name": "InsightLearn Infrastructure",
            "email": "sales@insightlearn.cloud",
            "url": "https://www.insightlearn.cloud",
            "contactPoint": [
                {
                    "@@type": "ContactPoint",
                    "contactType": "sales",
                    "email": "sales@insightlearn.cloud",
                    "availableLanguage": ["English", "Italian"],
                    "areaServed": "Worldwide"
                },
                {
                    "@@type": "ContactPoint",
                    "contactType": "technical support",
                    "email": "support@insightlearn.cloud",
                    "availableLanguage": ["English", "Italian"],
                    "areaServed": "Worldwide",
                    "hoursAvailable": {
                        "@@type": "OpeningHoursSpecification",
                        "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"],
                        "opens": "00:00",
                        "closes": "23:59"
                    }
                }
            ]
        }
    }
    </script>
</HeadContent>

<style>
    .contact-page {
        min-height: 100vh;
    }

    .contact-hero {
        background: linear-gradient(135deg, var(--primary-color, #a435f0) 0%, #6b21a8 100%);
        color: white;
        padding: 80px 0 60px;
        text-align: center;
    }

    .contact-hero h1 {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .hero-subtitle {
        font-size: 1.125rem;
        opacity: 0.9;
        max-width: 500px;
        margin: 0 auto;
    }

    .contact-methods {
        padding: 60px 0;
        background: var(--gray-50, #f7f9fa);
    }

    .methods-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
    }

    .method-card {
        background: white;
        border-radius: 16px;
        padding: 2rem;
        text-align: center;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .method-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.1);
    }

    .method-icon {
        width: 70px;
        height: 70px;
        background: var(--primary-light, #f7ecff);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
    }

    .method-icon i {
        font-size: 1.75rem;
        color: var(--primary-color, #a435f0);
    }

    .method-card h3 {
        font-size: 1.25rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        color: var(--gray-900);
    }

    .method-card p {
        color: var(--gray-600);
        margin-bottom: 1rem;
    }

    .method-link {
        color: var(--primary-color, #a435f0);
        font-weight: 600;
        text-decoration: none;
    }

    .method-link:hover {
        text-decoration: underline;
    }

    .contact-form-section {
        padding: 80px 0;
    }

    .form-grid {
        display: grid;
        grid-template-columns: 1.5fr 1fr;
        gap: 4rem;
        align-items: start;
    }

    .form-content h2 {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        color: var(--gray-900);
    }

    .form-content > p {
        color: var(--gray-600);
        margin-bottom: 2rem;
    }

    .contact-form {
        background: white;
        padding: 2rem;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-group label {
        display: block;
        font-weight: 600;
        color: var(--gray-700);
        margin-bottom: 0.5rem;
    }

    .form-control {
        width: 100%;
        padding: 0.875rem 1rem;
        border: 2px solid var(--gray-200);
        border-radius: 8px;
        font-size: 1rem;
        transition: border-color 0.3s;
    }

    .form-control:focus {
        outline: none;
        border-color: var(--primary-color, #a435f0);
    }

    .btn-block {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 1rem;
        font-size: 1rem;
    }

    .alert-success {
        margin-top: 1.5rem;
        padding: 1rem 1.5rem;
        background: #d4edda;
        border-radius: 8px;
        color: #155724;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .contact-info {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .info-card {
        background: white;
        padding: 1.5rem;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    }

    .info-card h3 {
        font-size: 1.25rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        color: var(--gray-900);
        padding-bottom: 0.75rem;
        border-bottom: 2px solid var(--primary-color, #a435f0);
    }

    .info-item {
        display: flex;
        gap: 1rem;
        margin-bottom: 1.25rem;
    }

    .info-item i {
        font-size: 1.25rem;
        color: var(--primary-color, #a435f0);
        width: 24px;
        flex-shrink: 0;
    }

    .info-item strong {
        display: block;
        color: var(--gray-900);
        margin-bottom: 0.25rem;
    }

    .info-item p {
        color: var(--gray-600);
        margin: 0;
    }

    .quick-links {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .quick-links li {
        margin-bottom: 0.75rem;
    }

    .quick-links a {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        color: var(--gray-700);
        text-decoration: none;
        padding: 0.5rem 0;
        transition: color 0.3s;
    }

    .quick-links a:hover {
        color: var(--primary-color, #a435f0);
    }

    .quick-links i {
        width: 20px;
        color: var(--primary-color, #a435f0);
    }

    @@media (max-width: 992px) {
        .form-grid {
            grid-template-columns: 1fr;
            gap: 2rem;
        }
    }

    @@media (max-width: 576px) {
        .form-row {
            grid-template-columns: 1fr;
        }
    }
</style>

@code {
    private ContactModel contactModel = new();
    private bool isSubmitting = false;
    private bool showSuccess = false;

    private List<BreadcrumbSchema.BreadcrumbItem> breadcrumbs = new()
    {
        new BreadcrumbSchema.BreadcrumbItem { Name = "Home", Url = "/" },
        new BreadcrumbSchema.BreadcrumbItem { Name = "Contact", Url = "/contact" }
    };

    private async Task HandleSubmit()
    {
        isSubmitting = true;
        StateHasChanged();

        // Simulate API call
        await Task.Delay(1500);

        isSubmitting = false;
        showSuccess = true;
        contactModel = new ContactModel();
        StateHasChanged();
    }

    private class ContactModel
    {
        public string FirstName { get; set; } = "";
        public string LastName { get; set; } = "";
        public string Email { get; set; } = "";
        public string Subject { get; set; } = "";
        public string Message { get; set; } = "";
    }
}
