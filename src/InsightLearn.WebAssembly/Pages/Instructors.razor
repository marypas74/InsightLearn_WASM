@page "/instructors"

<PageTitle>Become an Instructor - InsightLearn</PageTitle>

<div class="hero-section">
    <div class="container text-center py-5">
        <h1 class="display-4">Become an Instructor</h1>
        <p class="lead">Share your knowledge and earn money teaching what you love</p>
        <a href="/register" class="btn btn-primary btn-lg mt-3">Get Started Today</a>
    </div>
</div>

<div class="container py-5">
    <div class="row">
        <div class="col-md-4 text-center mb-4">
            <i class="bi bi-cash-stack" style="font-size: 3rem; color: var(--primary-color);"></i>
            <h3 class="mt-3">Earn Money</h3>
            <p>Get paid for sharing your expertise with students around the world</p>
        </div>
        <div class="col-md-4 text-center mb-4">
            <i class="bi bi-people" style="font-size: 3rem; color: var(--primary-color);"></i>
            <h3 class="mt-3">Grow Your Audience</h3>
            <p>Reach thousands of eager learners looking for quality education</p>
        </div>
        <div class="col-md-4 text-center mb-4">
            <i class="bi bi-graph-up-arrow" style="font-size: 3rem; color: var(--primary-color);"></i>
            <h3 class="mt-3">Track Your Success</h3>
            <p>Monitor your earnings, student engagement, and course performance</p>
        </div>
    </div>

    <div class="text-center mt-5">
        <h2>Ready to Start Teaching?</h2>
        <p>Join thousands of instructors already earning on InsightLearn</p>
        <a href="/register" class="btn btn-primary btn-lg">Sign Up Now</a>
    </div>
</div>
