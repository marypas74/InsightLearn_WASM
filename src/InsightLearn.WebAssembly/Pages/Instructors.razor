@page "/instructors"
@page "/become-instructor"
@page "/teach"
@using InsightLearn.WebAssembly.Components.SEO

<SeoMetaTags
    Title="Become an Instructor - Teach Online | InsightLearn"
    Description="Share your expertise and earn money teaching online courses. Join 500+ instructors on InsightLearn. Get up to 80% revenue share, comprehensive tools, and global reach."
    Keywords="become instructor, teach online, create online course, earn teaching, instructor revenue, online teaching platform, course creation"
    PageType="website"
    Author="InsightLearn Team" />

<BreadcrumbSchema Items="@breadcrumbs" />

<div class="instructor-page">
    <!-- Hero Section -->
    <section class="instructor-hero">
        <div class="container">
            <div class="hero-content">
                <h1 class="hero-title">
                    Share Your Knowledge,
                    <span class="highlight">Transform Lives</span>
                </h1>
                <p class="hero-subtitle">
                    Join thousands of instructors earning money teaching what they love.
                    Create courses, build your audience, and make a global impact.
                </p>
                <div class="hero-cta">
                    <a href="/register?type=instructor" class="btn btn-primary btn-lg">
                        <i class="fas fa-rocket"></i>
                        Start Teaching Today
                    </a>
                    <a href="#how-it-works" class="btn btn-outline btn-lg">
                        Learn More
                    </a>
                </div>
                <div class="hero-stats">
                    <div class="stat">
                        <span class="stat-value">500+</span>
                        <span class="stat-label">Active Instructors</span>
                    </div>
                    <div class="stat">
                        <span class="stat-value">$50M+</span>
                        <span class="stat-label">Paid to Instructors</span>
                    </div>
                    <div class="stat">
                        <span class="stat-value">150+</span>
                        <span class="stat-label">Countries Reached</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Benefits Section -->
    <section class="benefits-section">
        <div class="container">
            <h2 class="section-title">Why Teach on InsightLearn?</h2>
            <div class="benefits-grid">
                <div class="benefit-card">
                    <div class="benefit-icon">
                        <i class="fas fa-money-bill-wave"></i>
                    </div>
                    <h3>Up to 80% Revenue Share</h3>
                    <p>Earn industry-leading revenue share on every sale. Top instructors earn six figures annually.</p>
                </div>
                <div class="benefit-card">
                    <div class="benefit-icon">
                        <i class="fas fa-globe"></i>
                    </div>
                    <h3>Global Reach</h3>
                    <p>Reach millions of students worldwide. Your courses can be accessed from 150+ countries.</p>
                </div>
                <div class="benefit-card">
                    <div class="benefit-icon">
                        <i class="fas fa-tools"></i>
                    </div>
                    <h3>Powerful Creation Tools</h3>
                    <p>Our course builder, video hosting, and quiz creator make it easy to build professional courses.</p>
                </div>
                <div class="benefit-card">
                    <div class="benefit-icon">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <h3>Analytics Dashboard</h3>
                    <p>Track your earnings, student engagement, and course performance in real-time.</p>
                </div>
                <div class="benefit-card">
                    <div class="benefit-icon">
                        <i class="fas fa-headset"></i>
                    </div>
                    <h3>Dedicated Support</h3>
                    <p>Our instructor success team helps you optimize courses and grow your audience.</p>
                </div>
                <div class="benefit-card">
                    <div class="benefit-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h3>Content Protection</h3>
                    <p>Advanced DRM and piracy protection keeps your content safe and exclusive.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- How It Works Section -->
    <section id="how-it-works" class="how-it-works-section">
        <div class="container">
            <h2 class="section-title">How to Get Started</h2>
            <p class="section-subtitle">Launch your course in 4 simple steps</p>
            <div class="steps-grid">
                <div class="step-card">
                    <div class="step-number">1</div>
                    <h3>Apply to Teach</h3>
                    <p>Fill out a quick application telling us about your expertise and course idea.</p>
                </div>
                <div class="step-card">
                    <div class="step-number">2</div>
                    <h3>Plan Your Course</h3>
                    <p>Use our course planning tools to outline your curriculum and learning objectives.</p>
                </div>
                <div class="step-card">
                    <div class="step-number">3</div>
                    <h3>Create Content</h3>
                    <p>Record videos, create quizzes, and upload resources using our creator studio.</p>
                </div>
                <div class="step-card">
                    <div class="step-number">4</div>
                    <h3>Launch & Earn</h3>
                    <p>Publish your course, reach students worldwide, and start earning revenue.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Earnings Calculator -->
    <section class="earnings-section">
        <div class="container">
            <div class="earnings-content">
                <h2>Calculate Your Potential Earnings</h2>
                <p>See how much you could earn teaching on InsightLearn</p>
                <div class="calculator">
                    <div class="calculator-inputs">
                        <div class="input-group">
                            <label>Course Price</label>
                            <div class="input-with-prefix">
                                <span>$</span>
                                <input type="number" @bind="coursePrice" @bind:event="oninput" min="10" max="500" />
                            </div>
                        </div>
                        <div class="input-group">
                            <label>Estimated Students / Month</label>
                            <input type="number" @bind="studentsPerMonth" @bind:event="oninput" min="1" max="10000" />
                        </div>
                    </div>
                    <div class="calculator-result">
                        <div class="result-item">
                            <span class="result-label">Monthly Earnings</span>
                            <span class="result-value">$@MonthlyEarnings.ToString("N0")</span>
                        </div>
                        <div class="result-item highlight">
                            <span class="result-label">Yearly Earnings</span>
                            <span class="result-value">$@YearlyEarnings.ToString("N0")</span>
                        </div>
                    </div>
                </div>
                <p class="calculator-note">Based on 80% instructor revenue share</p>
            </div>
        </div>
    </section>

    <!-- Success Stories -->
    <section class="stories-section">
        <div class="container">
            <h2 class="section-title">Instructor Success Stories</h2>
            <div class="stories-grid">
                @foreach (var story in successStories)
                {
                    <div class="story-card">
                        <div class="story-quote">"@story.Quote"</div>
                        <div class="story-author">
                            <div class="author-avatar">@story.Initials</div>
                            <div class="author-info">
                                <div class="author-name">@story.Name</div>
                                <div class="author-title">@story.Title</div>
                            </div>
                        </div>
                        <div class="story-stats">
                            <span><i class="fas fa-users"></i> @story.Students students</span>
                            <span><i class="fas fa-star"></i> @story.Rating rating</span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- FAQ Section -->
    <section class="faq-section">
        <div class="container">
            <h2 class="section-title">Frequently Asked Questions</h2>
            <div class="faq-grid">
                <div class="faq-item">
                    <h3>Who can become an instructor?</h3>
                    <p>Anyone with expertise and passion for teaching! We welcome professionals, educators, freelancers, and subject matter experts from all fields.</p>
                </div>
                <div class="faq-item">
                    <h3>How much does it cost to create a course?</h3>
                    <p>It's completely free to create and publish courses on InsightLearn. We only earn when you earn.</p>
                </div>
                <div class="faq-item">
                    <h3>How do I get paid?</h3>
                    <p>Payouts are processed monthly via PayPal, bank transfer, or Payoneer. Minimum payout threshold is $50.</p>
                </div>
                <div class="faq-item">
                    <h3>What equipment do I need?</h3>
                    <p>A decent microphone and webcam are recommended. You don't need professional studio equipment - many top courses are created with basic setups.</p>
                </div>
            </div>
            <div class="faq-more">
                <a href="/faq#instructors" class="btn btn-outline">
                    <i class="fas fa-question-circle"></i>
                    More FAQ
                </a>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
        <div class="container">
            <div class="cta-content">
                <h2>Ready to Share Your Knowledge?</h2>
                <p>Join our community of instructors and start making an impact today</p>
                <div class="cta-buttons">
                    <a href="/register?type=instructor" class="btn btn-primary btn-lg">
                        <i class="fas fa-chalkboard-teacher"></i>
                        Apply to Teach
                    </a>
                    <a href="/contact" class="btn btn-outline btn-lg">
                        <i class="fas fa-envelope"></i>
                        Contact Us
                    </a>
                </div>
            </div>
        </div>
    </section>
</div>

