@page "/resources"
@page "/learning-resources"
@using InsightLearn.WebAssembly.Components.SEO

<SeoMetaTags
    Title="Learning Resources - Free Educational Materials | InsightLearn"
    Description="Access free learning resources, tutorials, guides, and educational materials. Download cheat sheets, explore coding exercises, and accelerate your learning journey."
    Keywords="learning resources, free tutorials, educational materials, coding exercises, cheat sheets, study guides, InsightLearn"
    PageType="CollectionPage" />

<PageTitle>Learning Resources - InsightLearn</PageTitle>

<div class="resources-page">
    <!-- Hero Section -->
    <section class="resources-hero">
        <div class="container">
            <h1>Learning Resources</h1>
            <p class="hero-subtitle">
                Free tools, guides, and materials to supercharge your learning journey.
            </p>
        </div>
    </section>

    <!-- Resource Categories -->
    <section class="resource-categories">
        <div class="container">
            <div class="categories-grid">
                <!-- Cheat Sheets -->
                <div class="resource-card">
                    <div class="resource-icon">
                        <i class="fas fa-file-alt"></i>
                    </div>
                    <h3>Cheat Sheets</h3>
                    <p>Quick reference guides for programming languages, frameworks, and tools.</p>
                    <ul class="resource-list">
                        <li><a href="/courses?category=programming">Python Cheat Sheet</a></li>
                        <li><a href="/courses?category=programming">JavaScript ES6+ Reference</a></li>
                        <li><a href="/courses?category=programming">Git Commands Guide</a></li>
                        <li><a href="/courses?category=programming">SQL Quick Reference</a></li>
                    </ul>
                </div>

                <!-- Video Tutorials -->
                <div class="resource-card">
                    <div class="resource-icon">
                        <i class="fas fa-play-circle"></i>
                    </div>
                    <h3>Free Video Tutorials</h3>
                    <p>Watch introductory lessons from our most popular courses.</p>
                    <ul class="resource-list">
                        <li><a href="/courses">Web Development Basics</a></li>
                        <li><a href="/courses">Data Science Introduction</a></li>
                        <li><a href="/courses">UI/UX Design Fundamentals</a></li>
                        <li><a href="/courses">Cloud Computing Overview</a></li>
                    </ul>
                </div>

                <!-- Practice Exercises -->
                <div class="resource-card">
                    <div class="resource-icon">
                        <i class="fas fa-code"></i>
                    </div>
                    <h3>Practice Exercises</h3>
                    <p>Hands-on coding challenges to reinforce your learning.</p>
                    <ul class="resource-list">
                        <li><a href="/courses?category=programming">Algorithm Challenges</a></li>
                        <li><a href="/courses?category=programming">Frontend Projects</a></li>
                        <li><a href="/courses?category=programming">Database Exercises</a></li>
                        <li><a href="/courses?category=programming">API Integration Tasks</a></li>
                    </ul>
                </div>

                <!-- Study Guides -->
                <div class="resource-card">
                    <div class="resource-icon">
                        <i class="fas fa-book-open"></i>
                    </div>
                    <h3>Study Guides</h3>
                    <p>Comprehensive guides to help you prepare for certifications.</p>
                    <ul class="resource-list">
                        <li><a href="/courses">AWS Certification Prep</a></li>
                        <li><a href="/courses">Azure Fundamentals Guide</a></li>
                        <li><a href="/courses">Kubernetes Study Path</a></li>
                        <li><a href="/courses">DevOps Roadmap</a></li>
                    </ul>
                </div>

                <!-- Templates -->
                <div class="resource-card">
                    <div class="resource-icon">
                        <i class="fas fa-layer-group"></i>
                    </div>
                    <h3>Project Templates</h3>
                    <p>Starter templates to kickstart your projects.</p>
                    <ul class="resource-list">
                        <li><a href="/courses">React Starter Kit</a></li>
                        <li><a href="/courses">Node.js API Boilerplate</a></li>
                        <li><a href="/courses">Python Data Science Template</a></li>
                        <li><a href="/courses">Docker Compose Examples</a></li>
                    </ul>
                </div>

                <!-- Community -->
                <div class="resource-card">
                    <div class="resource-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <h3>Community Resources</h3>
                    <p>Connect with fellow learners and get support.</p>
                    <ul class="resource-list">
                        <li><a href="/faq">FAQ & Knowledge Base</a></li>
                        <li><a href="/contact">Discussion Forums</a></li>
                        <li><a href="/contact">Study Groups</a></li>
                        <li><a href="/contact">Mentorship Program</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <!-- Learning Paths Section -->
    <section class="learning-paths">
        <div class="container">
            <h2>Recommended Learning Paths</h2>
            <p class="section-subtitle">Structured curricula to guide your learning journey from beginner to expert.</p>

            <div class="paths-grid">
                <div class="path-card">
                    <div class="path-badge">Beginner</div>
                    <h3>Full-Stack Web Developer</h3>
                    <p>Master HTML, CSS, JavaScript, React, Node.js, and databases.</p>
                    <div class="path-meta">
                        <span><i class="fas fa-clock"></i> 6-8 months</span>
                        <span><i class="fas fa-graduation-cap"></i> 12 courses</span>
                    </div>
                    <a href="/courses?category=web-development" class="btn btn-outline">Explore Path</a>
                </div>

                <div class="path-card">
                    <div class="path-badge">Intermediate</div>
                    <h3>Data Scientist</h3>
                    <p>Learn Python, statistics, machine learning, and data visualization.</p>
                    <div class="path-meta">
                        <span><i class="fas fa-clock"></i> 8-10 months</span>
                        <span><i class="fas fa-graduation-cap"></i> 15 courses</span>
                    </div>
                    <a href="/courses?category=data-science" class="btn btn-outline">Explore Path</a>
                </div>

                <div class="path-card">
                    <div class="path-badge">Advanced</div>
                    <h3>Cloud Architect</h3>
                    <p>AWS, Azure, Kubernetes, Terraform, and cloud security.</p>
                    <div class="path-meta">
                        <span><i class="fas fa-clock"></i> 10-12 months</span>
                        <span><i class="fas fa-graduation-cap"></i> 18 courses</span>
                    </div>
                    <a href="/courses?category=cloud-computing" class="btn btn-outline">Explore Path</a>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="resources-cta">
        <div class="container">
            <h2>Ready to Start Learning?</h2>
            <p>Browse our full course catalog and find the perfect course for you.</p>
            <a href="/courses" class="btn btn-primary btn-lg">Browse All Courses</a>
        </div>
    </section>
</div>

<style>
    .resources-page {
        min-height: 100vh;
    }

    .resources-hero {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
        padding: 80px 0 60px;
        text-align: center;
    }

    .resources-hero h1 {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .hero-subtitle {
        font-size: 1.125rem;
        opacity: 0.9;
        max-width: 600px;
        margin: 0 auto;
    }

    .resource-categories {
        padding: 80px 0;
        background: var(--gray-50, #f7f9fa);
    }

    .categories-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 2rem;
    }

    .resource-card {
        background: white;
        border-radius: 16px;
        padding: 2rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .resource-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.1);
    }

    .resource-icon {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
    }

    .resource-icon i {
        font-size: 1.5rem;
        color: white;
    }

    .resource-card h3 {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--gray-900, #1c1d1f);
        margin-bottom: 0.5rem;
    }

    .resource-card > p {
        color: var(--gray-600, #6b7280);
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }

    .resource-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .resource-list li {
        padding: 0.5rem 0;
        border-bottom: 1px solid var(--gray-100, #f3f4f6);
    }

    .resource-list li:last-child {
        border-bottom: none;
    }

    .resource-list a {
        color: var(--gray-700, #374151);
        text-decoration: none;
        display: flex;
        align-items: center;
        transition: color 0.3s;
    }

    .resource-list a:hover {
        color: #10b981;
    }

    .resource-list a::before {
        content: "\f054";
        font-family: "Font Awesome 6 Free";
        font-weight: 900;
        font-size: 0.75rem;
        margin-right: 0.75rem;
        color: #10b981;
    }

    .learning-paths {
        padding: 80px 0;
        background: white;
    }

    .learning-paths h2 {
        font-size: 2rem;
        font-weight: 700;
        text-align: center;
        color: var(--gray-900, #1c1d1f);
        margin-bottom: 0.5rem;
    }

    .section-subtitle {
        text-align: center;
        color: var(--gray-600, #6b7280);
        margin-bottom: 3rem;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    .paths-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }

    .path-card {
        background: var(--gray-50, #f7f9fa);
        border-radius: 16px;
        padding: 2rem;
        position: relative;
        border: 2px solid transparent;
        transition: border-color 0.3s;
    }

    .path-card:hover {
        border-color: #10b981;
    }

    .path-badge {
        display: inline-block;
        background: #10b981;
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        margin-bottom: 1rem;
    }

    .path-card h3 {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--gray-900, #1c1d1f);
        margin-bottom: 0.5rem;
    }

    .path-card > p {
        color: var(--gray-600, #6b7280);
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }

    .path-meta {
        display: flex;
        gap: 1.5rem;
        margin-bottom: 1.5rem;
        color: var(--gray-500, #6b7280);
        font-size: 0.875rem;
    }

    .path-meta span {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-outline {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        border: 2px solid #10b981;
        color: #10b981;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: background 0.3s, color 0.3s;
    }

    .btn-outline:hover {
        background: #10b981;
        color: white;
    }

    .resources-cta {
        background: linear-gradient(135deg, var(--primary-color, #a435f0) 0%, #6b21a8 100%);
        color: white;
        padding: 80px 0;
        text-align: center;
    }

    .resources-cta h2 {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .resources-cta p {
        font-size: 1.125rem;
        opacity: 0.9;
        margin-bottom: 2rem;
    }

    .btn-lg {
        padding: 1rem 2rem;
        font-size: 1.125rem;
    }

    @@media (max-width: 768px) {
        .resources-hero h1 {
            font-size: 2rem;
        }

        .categories-grid,
        .paths-grid {
            grid-template-columns: 1fr;
        }
    }
</style>